@COOKING_MENU
#DIM PAGE
#DIMS MENUNAME

PRINTL 何を作りますか？
PRINTL
DRAWLINE
PRINTL
PRINTL 移動場所選択
PRINTL
;おしながき
LOCAL:1 = 0
FOR LOCAL, 1+(PAGE*30), 31+(PAGE*30)
	IF GETDISHNAME(LOCAL) != ""
		PRINT 　　
		PRINTBUTTON @"%"[" + GETDISHNAME(LOCAL) + "]", 20%", LOCAL
		LOCAL:1 ++
		SIF LOCAL:1 % 3 == 0
			PRINTL
	ENDIF
NEXT
PRINTL
DRAWLINE
;メニュージャンルの表示
FOR LOCAL, 0, 3
	PRINT 　
	;現在のジャンルを橙色で表示
	SIF PAGE == LOCAL
		SETCOLOR 0XFF8000
	SELECTCASE LOCAL
		CASE 0
			LOCALS = 軽食
		CASE 1
			LOCALS = 主食
		CASE 2
			LOCALS = デザート
	ENDSELECT
	PRINT 　　
	PRINTBUTTON @"[%LOCALS%]", -(LOCAL+1)
	RESETCOLOR
NEXT
PRINTL
DRAWLINE
PRINTBUTTON "[やっぱりやめた]", -100
PRINTL
PRINTL
INPUT

SELECTCASE RESULT
	CASE -100
		RETURN 0
	;ページ変更
	CASE -3 TO -1
		PAGE = ABS(RESULT)-1

	CASEELSE
		IF GETDISHNAME(RESULT) != ""
			IF GETDISHMENU(RESULT) == "主食" && ABL:MASTER:料理技能 < 2
				PRINTFORMW 主食を作るには料理技能が2以上必要です
				RESTART
			ELSEIF GETDISHMENU(RESULT) == "デザート" && ABL:MASTER:料理技能 < 3
				PRINTFORMW デザートを作るには料理技能が3以上必要です
				RESTART
			ENDIF
			
			PRINTFORMW %GETDISHNAME(RESULT)%を作りました
			FLAG:料理 = RESULT
			TFLAG:194 = PAGE + 1
			IF TFLAG:194 == 1
				DOWNBASE:MASTER:体力 = 25
				DOWNBASE:MASTER:気力 = 100
				EXP:MASTER:料理経験 += 2
				TIME += 30
			ELSEIF TFLAG:194 == 2
				DOWNBASE:MASTER:体力 = 50
				DOWNBASE:MASTER:気力 = 200
				EXP:MASTER:料理経験 += 4
				TIME += 60
			ELSEIF TFLAG:194 == 3
				DOWNBASE:MASTER:体力 = 100
				DOWNBASE:MASTER:気力 = 100
				EXP:MASTER:料理経験 += 6
				TIME += 90
			ENDIF
			;傍に誰もいないなら混ぜ込み発生
			SIF TARGET == MASTER
				CALL MIX_MENU
			
			RETURN 1
		ENDIF
ENDSELECT

RESTART



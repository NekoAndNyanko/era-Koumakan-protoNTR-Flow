;-------------------------------------------------
;ニプルキャップ
;道具使用コマンド、レベル2
;-------------------------------------------------
@COM47

TRYCALL COM417_is_Protected(PLAYER,TARGET,娼婦紋_胸元)
SIF RESULT
	RETURN 0

;着脱の処理
TEQUIP:ニプルキャップ = !TEQUIP:ニプルキャップ

;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
DOWNBASE:体力 += 10
DOWNBASE:気力 += 80

SOURCE:快Ｂ = 200
SOURCE:露出 = 20
SOURCE:逸脱 = 30
SOURCE:反感 = 30


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑鬱ソース追加
SIF TALENT:自己愛 < 0 || TALENT:抵抗
	SOURCE:鬱屈 += 30
;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;同性愛　レズなら戻り値1ゲイなら戻り値2
IF HETEROSEX(TARGET,PLAYER)
	EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 1
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 1
ENDIF

EXP:PLAYER:道具使用経験 ++

RETURN 1
;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM47(ARG)
;ニプルキャップ装備中
PRINTL ＜ニプルキャップ装備中＞
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
DOWNBASE:ARG:体力 += 5
DOWNBASE:ARG:気力 += 20

SOURCE:ARG:快Ｂ += 100
SOURCE:ARG:露出 += 10
SOURCE:ARG:逸脱 += 15
SOURCE:ARG:反感 += 15

RETURN 1

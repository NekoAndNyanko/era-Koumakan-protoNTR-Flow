;NTR野外調教関係
;　訪問者による住人野外調教関係の処理

;-------------------------------------------------------------------------------
;弱み獲得1 自慰行為を目撃されることによる訪問者への弱み獲得
@NTR_GET_WEAKNESS_1(奴隷)
	#DIM 奴隷

	;再表示防止
	IF !TALENT:奴隷:訪問者への弱み
		IF NTR_CHK_VISIBLE(FLAG:訪問者の現在位置)
			PRINTFORMW %CALLNAME:奴隷%は自慰行為を%NTR_NAME(0)%に撮影されてしまったようだ
			PRINTFORMW %CALLNAME:奴隷%は%NTR_NAME(0)%に弱みを握られた。
		ENDIF
		TALENT:奴隷:訪問者への弱み = 1
	ENDIF
RETURN

;-------------------------------------------------------------------------------
;弱み獲得2 恋人以外との性行為による訪問者への弱み獲得
@NTR_GET_WEAKNESS_2(奴隷)
	#DIM 奴隷
	;恋慕でなければチェックしない
	IF TALENT:奴隷:恋慕
		;再表示防止
		IF !TALENT:奴隷:訪問者への弱み
			IF NTR_CHK_VISIBLE(FLAG:訪問者の現在位置)
				PRINTFORMW %CALLNAME:奴隷%は%ANATA_LOVER(奴隷)%以外の%NTR_OTOKO()%と身体を重ねてしまった。
				PRINTFORMW %CALLNAME:奴隷%は%NTR_NAME(0)%に弱みを握られた。
			ENDIF
			TALENT:奴隷:訪問者への弱み = 1
		ENDIF
	ENDIF
RETURN

;-------------------------------------------------------------------------------
;NTR野外調教開始
@NTR_EXHIBITION_START(奴隷)
	#DIM 奴隷
	IF NTR_CHK_VISIBLE(FLAG:訪問者の現在位置)
		PRINTFORMW %CALLNAME:奴隷%は弱みを握られているため%NTR_NAME(0)%を無碍にできない
	ENDIF
	;念のため同行解除
	IF CFLAG:奴隷:同行 != 0
		CFLAG:奴隷:同行 = 0
		IF NTR_CHK_VISIBLE(FLAG:訪問者の現在位置)
			PRINTFORMW %CALLNAME:奴隷%は%CALLNAME:MASTER%から離れ%NTR_NAME(0)%の方に歩いていった。
		ENDIF
	ENDIF
	;訪問者の同行も解除
	FLAG:訪問者同行フラグ = 0
	IF NTR_CHK_VISIBLE(FLAG:訪問者の現在位置)
		IF CFLAG:奴隷:脅迫度 > 野外調教閾値_放置プレイ
			PRINTFORMW %CALLNAME:奴隷%は下着姿のまま%NTR_NAME(0)%と共に出かけていった。
			TRYCALLLIST
				FUNC NTR_KOJO_K{CFLAG:奴隷:297}_17_0(奴隷)
				FUNC NTR_KOJO_K_17_0(奴隷)
			ENDFUNC
		ELSE
			PRINTFORMW %CALLNAME:奴隷%は下着を履かずに露出の多い衣装で%NTR_NAME(0)%と共に出かけていった。
			TRYCALLLIST
				FUNC NTR_KOJO_K{CFLAG:奴隷:297}_17_1(奴隷)
				FUNC NTR_KOJO_K_17_1(奴隷)
			ENDFUNC
		ENDIF
	ENDIF
	CFLAG:奴隷:NTR野外調教 = 1
	CFLAG:奴隷:自慰中 = 0			
	FLAG:訪問者の現在位置 = 場所_薄暗い路地裏
	CFLAG:奴隷:現在位置 = 場所_薄暗い路地裏
	CFLAG:奴隷:NTR訪問者との行為の終了時刻 = DATETIME() + RAND:60 + 60 + RAND(CFLAG:奴隷:脅迫度+1)
RETURN

;-------------------------------------------------------------------------------
;NTR野外調教
@NTR_EXHIBITION(奴隷)
	#DIM 奴隷
	IF CFLAG:奴隷:脅迫度 > 野外調教閾値_放置プレイ
		IF !CFLAG:奴隷:村人
			;村人がまだいないとき
			CALL NTR_EXHIBITION_LEAVE_0(奴隷)
		ELSEIF !CFLAG:奴隷:村人のセクハラ
			;村人がいるけどまだ見てるだけ
			CALL NTR_EXHIBITION_LEAVE_1(奴隷)
		ELSEIF !CFLAG:奴隷:下着剥ぎ取り
			;村人が手を出してきた（下着着用）
			CALL NTR_EXHIBITION_LEAVE_2(奴隷)
		ELSE
			;村人が手を出してきた（全裸）
			CALL NTR_EXHIBITION_LEAVE_3(奴隷)
		ENDIF
	ELSE
		CALL NTR_EXHIBITION_STAY(奴隷)
	ENDIF

;-------------------------------------------------------------------------------
;NTR野外調教
@NTR_EXHIBITION_STAY(奴隷)
	#DIM 奴隷

	IF RAND:100 < 20
		IF NTR_CHK_VISIBLE(FLAG:訪問者の現在位置)
			PRINTFORMW %CALLNAME:奴隷%は%NTR_NAME(0)%に脅され、羞恥に顔を染めながら自慰をし始めた
			PRINTFORMW %NTR_NAME(0)%は%CALLNAME:奴隷%が絶頂に達するまで%CALLNAME:奴隷%を眺めていた
			TRYCALLLIST
				FUNC NTR_KOJO_K{CFLAG:奴隷:297}_17_3(奴隷)
				FUNC NTR_KOJO_K_17_3(奴隷)
			ENDFUNC
		ENDIF
		EXP:奴隷:露出快楽経験 ++
		EXP:奴隷:自慰経験 ++
		EXP:奴隷:調教自慰経験 ++	
		EXP:奴隷:絶頂経験 ++
		CFLAG:奴隷:脅迫度 ++
		SOURCE:奴隷:露出 = 200
		CALL NTR_EXH_SOURCE_OP(奴隷)
	ELSEIF RAND:100 < 80 || CFLAG:奴隷:NTR訪問者との行為の終了時刻 >= DATETIME()
		IF NTR_CHK_VISIBLE(FLAG:訪問者の現在位置)
			PRINTFORMW %NTR_NAME(0)%は%CALLNAME:奴隷%にスカートをたくし上げさせ、丸見えになった秘所を撮影している
			TRYCALLLIST
				FUNC NTR_KOJO_K{CFLAG:奴隷:297}_17_4(奴隷)
				FUNC NTR_KOJO_K_17_4(奴隷)
			ENDFUNC
		ENDIF
		EXP:奴隷:露出快楽経験 ++
		EXP:奴隷:被写経験 ++
		CFLAG:奴隷:脅迫度 ++
		SOURCE:奴隷:露出 = 200
		CALL NTR_EXH_SOURCE_OP(奴隷)
	ELSE
		IF NTR_CHK_VISIBLE(CFLAG:奴隷:現在位置)
			PRINTFORMW %CALLNAME:奴隷%がどこかから帰ってきたようだ
		ENDIF
		CALL NTR_EXHIBITION_END(奴隷)
	ENDIF
RETURN
	

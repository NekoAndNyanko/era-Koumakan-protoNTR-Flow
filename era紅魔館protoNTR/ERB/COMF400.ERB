;-------------------------------------------------
;移動
;-------------------------------------------------
@COM400
#DIMS ROOMNAME
#DIM PAGE
#DIM 住人
#DIM LOOP_CHR
#DIM LOOP_POS
#DIM WK
#DIMS WKNAME
#DIM TargetRoom

CALL TURN_RESET
;遠距離移動中の処理
IF TFLAG:遠距離移動

	TargetRoom = TFLAG:遠距離移動

	IF TargetRoom == CFLAG:MASTER:現在位置
		NEXTCOM = -1
		TFLAG:遠距離移動 = 0
		CALLF RESET_ROUTE(MASTER, 1)
		RETURN 0
	ENDIF

	;キャラの位置更新(NEXTCOM設定中は@SHOW_STATUSが走らないのでこっちで処理)
	CALL CHARA_MOVEMENT
	TFLAG:時間経過 = DATETIME()
		;キャラをCFLAG:310の昇順に並び替え
	VARSET TARGET
	CALL SORT_CFLAG(310)
	WK = 0
	CALL NTR_CHK_GOWITH(10)
	FOR LOOP_CHR,1,CHARANUM
		IF CFLAG:MASTER:現在位置 != CFLAG:(RESULT:LOOP_CHR):現在位置
			CONTINUE
		ENDIF
		WK ++
		TARGET:WK = RESULT:LOOP_CHR
	NEXT

	住人 = 0
		;誰かいないかチェック
	FOR LOOP_CHR,1,CHARANUM
		IF TARGET:LOOP_CHR <= 0
			CONTINUE
		ENDIF
		IF CFLAG:(TARGET:LOOP_CHR):同行
			CONTINUE
		ENDIF
		住人 = TARGET:LOOP_CHR
	NEXT
	IF 住人
		PRINTFORM %GETPLACENAME(CFLAG:MASTER:現在位置)%で%CALLNAME:住人%と出会った
			;STRLENSU CALLNAME:住人
			;PRINTFORMW 対象:%CALLNAME:住人% パンツ:%CSTR:MASTER:12% %SUBSTRINGU(CSTR:MASTER:12, 0, RESULT)%
		IF STRLENS(CSTR:MASTER:12) && 収集品死守戦発生(住人) && !CFLAG:住人:睡眠
			CALL CHK_COLLECTION_ITEM(住人)
			IF RESULT == 1
				RETURN 0
			ENDIF
		ELSEIF FLAG:貞操帯鍵購入フラグ && RAND:2 && CFLAG:TARGET:NTR貞操帯反応
			CALL CHK_LOCK(住人)
		ELSE
			PRINTL ……　どうしますか？
			PRINTL [0] そのまま移動する
			PRINTL [1] 立ち止まる
			INPUT

			IF RESULT == 0
					;無視する場合
				CALL IGNORE_WHEN_MOVE(住人)
			ELSE
					;実際は0以外全部立ち止まる扱い
				CALL STOP_WHEN_MOVE(住人)
				RETURN 0
			ENDIF
		ENDIF
	ENDIF
		;遠距離移動
	IF CAN_MOVE(CFLAG:MASTER:現在位置, TargetRoom)
			;地下室
		IF TargetRoom == 場所_地下室 && ABL:MASTER:戦闘能力 <= 0
			PRINTW 扉の中から禍々しい気配を感じる…
			PRINTW この先に入って無事に帰ってくるためには、ある程度の実力が必要だろう。
				;遠距離移動フラグ消去
			NEXTCOM = -1
			CALLF RESET_ROUTE(MASTER, 1)
			RETURN 0
		ELSEIF TargetRoom != 場所_あなた私室 && isLocked(TargetRoom) && !canUnLock(MASTER, TargetRoom)
				;あなた以外の私室 and 合鍵無し
			PRINTW 内側から鍵が掛けられている…
			IF GETBIT(FLAG:雑多設定,2)
					;なかにいるキャラから頼まれ事を請けているか
				FOR LOOP_CHR, 1, 8
					IF CFLAG:LOOP_CHR:現在位置 != TargetRoom
						CONTINUE
					ENDIF
					IF CFLAG:LOOP_CHR:従者イベント１ >= 10
						TRYCALL 従者E_受け取り不可, LOOP_CHR, "鍵閉め"
					ENDIF
				NEXT

			ENDIF
				;遠距離移動フラグ消去
			NEXTCOM = -1
			CALLF RESET_ROUTE(MASTER, 1)
			RETURN 0
			;それ以外の場所
		ELSE
			;あなたの現在位置に移動先を代入
			CFLAG:MASTER:現在位置 = TargetRoom
			;施錠されているが解錠できる
			IF isLocked(TargetRoom)
				IF tryUnLock(MASTER, TargetRoom)
					IF HAS_DUPLICATE_KEY(TargetRoom)
						PRINTFORML %"内側から鍵が掛けられている……"+CALLNAME:MASTER+"は合鍵を使って入った"%
					ELSE
						PRINTFORML %"内側から鍵が掛けられている……"+CALLNAME:MASTER+"は鍵を開けて入った"%
					ENDIF
				ENDIF
			ENDIF
			PRINTFORML 
			FOR LOOP_CHR, 1, CHARANUM
				CALL CHAR_ON_PLACE(LOOP_CHR)
			NEXT
				;遠距離移動フラグ消去
			NEXTCOM = -1
		ENDIF
		FOR LOOP_CHR,1,CHARANUM
			IF CFLAG:LOOP_CHR:同行
				CFLAG:LOOP_CHR:現在位置 = CFLAG:MASTER:現在位置
			ENDIF
		NEXT
	ELSE
			;現在位置を更新し、次も移動の扱いにする
		CFLAG:MASTER:現在位置 = 移動ルート:MASTER:0
		CALL SORT_ROUTE(MASTER)
		NEXTCOM = 400
	ENDIF
	IF FLAG:訪問者同行フラグ
		FLAG:訪問者の現在位置 = CFLAG:MASTER:現在位置
	ENDIF
	CALL INHABITANT_FRIENDSHIP_END_MASTER_MOVE
	TIME += 3
	RETURN 0
ENDIF

	;プレイヤーの位置から表示するマップを変更
PAGE = MAP_DISTINCTION(CFLAG:MASTER:現在位置)

$LOOP_PAGE

DRAWLINE
PRINTL
PRINTL 移動場所選択
PRINTL
CALLFORM MAP_PRINT_{PAGE}
PRINTL
DRAWLINE
	;マップの数だけ表示
FOR WK, 0, 2
	PRINT 　
		;現在のマップを橙色で表示
	IF PAGE == WK
		SETCOLOR 0XFF8000
	ENDIF
	SELECTCASE WK
		CASE 0
			WKNAME = 紅魔館
		CASE 1
			WKNAME = 霧の湖周辺他
	ENDSELECT
	PRINT 　　
	PRINTBUTTON @"[%WKNAME%]", WK+1000
	RESETCOLOR
NEXT
PRINTL
DRAWLINE
PRINTL
PRINTFORML 現在{CFLAG:MASTER:現在位置}:%GETPLACENAME(CFLAG:MASTER:現在位置)%にいます
IF !CAN_MOVE(CFLAG:MASTER:現在位置, CFLAG:MASTER:開始位置) && CFLAG:MASTER:現在位置 != CFLAG:MASTER:開始位置
	PRINTL [0] - 私室へ戻る
ENDIF
FOR LOOP_POS,0, 場所番号最大値+1
	IF CAN_MOVE(CFLAG:MASTER:現在位置, LOOP_POS)
		PRINTFORML [{LOOP_POS}] - %GETPLACENAME(LOOP_POS)%
	ENDIF
NEXT
PRINT [100] - 戻る
$INPUT_LOOP
INPUTS
IF RESULTS == ""
	GOTO INPUT_LOOP
ENDIF
TargetRoom = TOINT(RESULTS) - (TOINT(RESULTS) == 0 && RESULTS != "0")
IF TargetRoom == -1
	REPLACE RESULTS, CALLNAME:MASTER, "%CALLNAME:MASTER%"
	FOR LOOP_POS, 1, 18
		IF GETPLACENAME(LOOP_POS) == RESULTS
			TargetRoom = LOOP_POS
		ENDIF
	NEXT
ENDIF

IF TargetRoom == 0
		;直接ワープで戻るのはよくないので置換
	TargetRoom = CFLAG:MASTER:開始位置
ENDIF


IF TargetRoom == 100
	RETURN 0
	;マップ変更
ELSEIF INRANGE(TargetRoom, 1000, 1001)
	PAGE = TargetRoom - 1000
	GOTO LOOP_PAGE
	;目的地がテラスならレミリア私室が閉まっている且つ合鍵を持っていないと進めない
ELSEIF TargetRoom == 場所_3Fテラス && CFLAG:MASTER:現在位置 != 場所_レミリア私室 &&  isLocked(場所_レミリア私室) && !HAS_DUPLICATE_KEY(場所_レミリア私室)
	PRINTW レミリア私室を通れない為、移動できません
	GOTO LOOP_PAGE
ELSEIF TargetRoom == 0
		;どうしようもなければワープで戻る
	CFLAG:MASTER:現在位置 = CFLAG:MASTER:開始位置
ELSEIF !INRANGE(TargetRoom, 0, 場所番号最大値)
	CLEARLINE 1
	REUSELASTLINE 
	GOTO INPUT_LOOP
	;移動先が隣の場所
ELSEIF CAN_MOVE(CFLAG:MASTER:現在位置, TargetRoom)
	IF FLAG:1840 < 2
		FLAG:1840 = 0
	ENDIF

	;地下室
	IF TargetRoom == 場所_地下室 && ABL:MASTER:戦闘能力 <= 0
		PRINTW 扉の中から禍々しい気配を感じる…
		PRINTW この先に入って無事に帰ってくるためには、ある程度の実力が必要だろう。
		RESTART
	ELSEIF isLocked(TargetRoom)
		;施錠されている
		IF tryUnLock(MASTER, TargetRoom)
			IF HAS_DUPLICATE_KEY(TargetRoom)
				PRINTFORML 合鍵を使って入った
			ELSE
				PRINTFORML 鍵を開けて入った
			ENDIF
		ELSE
			PRINTW 内側から鍵が掛けられている…
			RESTART
		ENDIF
	ENDIF
	CFLAG:MASTER:現在位置 = TargetRoom
	PRINTFORML 
	FOR LOOP_CHR, 1, CHARANUM
		CALL CHAR_ON_PLACE(LOOP_CHR)
	NEXT
	CALL NTR_CHK_GOWITH(10)
ELSE
	IF FLAG:1840 < 2
		FLAG:1840 = 0
	ENDIF
		;目的地が離れているので、最終目的地として設定
	TFLAG:遠距離移動 = TargetRoom
	CALLF FARMOVE(MASTER, CFLAG:MASTER:現在位置, TargetRoom)
		;現在位置を更新し、次も移動の扱いにする
	CFLAG:MASTER:現在位置 = 移動ルート:MASTER:0
	CALL SORT_ROUTE(MASTER)
	NEXTCOM = 400
ENDIF
IF FLAG:訪問者同行フラグ
	FLAG:訪問者の現在位置 = CFLAG:MASTER:現在位置
ENDIF
CALL INHABITANT_FRIENDSHIP_END_MASTER_MOVE
TIME += 3
PREVCOM = 400
STR:0 = 移動

RETURN 0


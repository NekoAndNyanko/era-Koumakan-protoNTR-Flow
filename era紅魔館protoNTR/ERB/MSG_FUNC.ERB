;--------------------------------------------------

;ハートマーク
@MSG_HEART
	#FUNCTIONS
	RETURNF UNICODE(0x2764)

;壁または木取得(訪問者)
@MSG_WALL_OR_TREE
	#FUNCTIONS
	#DIM 場所
	場所 = FLAG:訪問者の現在位置 
	IF 場所 == 場所_庭 || 場所 == 場所_湖 || 場所 == 場所_湖南部 || 場所 == 場所_魔法の森内部
		RETURNF "木"
	ELSE
		RETURNF "壁"
	ENDIF

;壁または木取得(汎用)
@MSG_WallOrTree(場所)
	#FUNCTIONS
	#DIM 場所
	IF 場所 == 場所_庭 || 場所 == 場所_湖 || 場所 == 場所_湖南部 || 場所 == 場所_魔法の森内部
		RETURNF "木"
	ELSE
		RETURNF "壁"
	ENDIF

;割れ目描写文字列取得
@MSG_SLIT(奴隷)
	#FUNCTIONS
	#DIM 奴隷
	IF TALENT:奴隷:体型 < 0
		IF RAND:2 == 0
			RETURNF "可憐なスリット"
		ELSE
			RETURNF "幼いワレメ"
		ENDIF
	ELSE
		IF RAND:2 == 0
			RETURNF "秘めやかな花弁"
		ELSE
			RETURNF "秘裂"
		ENDIF
	ENDIF

;分単位の数値を時間、分文字列に変換
@MSG_HOUR_MIN(時間_分)
	#FUNCTIONS
	#DIM 時間_分
	#DIMS 時間分文字列
	IF 時間_分 >= 60 && 時間_分 % 60 == 0
		時間分文字列 = {時間_分/60}時間
	ELSEIF 時間_分 > 60
		時間分文字列 = {時間_分/60}時間{時間_分%60}分
	ELSE
		時間分文字列 = {時間_分%60}分
	ENDIF
	RETURNF 時間分文字列


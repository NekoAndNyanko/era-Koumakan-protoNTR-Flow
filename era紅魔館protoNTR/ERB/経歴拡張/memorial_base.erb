;-------------------------------------------------------------------------------
;相手番号から相手名称取得
@get_call_name(相手番号)
	#FUNCTIONS
	#DIM 相手番号

	SELECTCASE 相手番号
	CASE 人物_あなた
		RETURNF CALLNAME:MASTER
	CASE 人物_訪問者
		RETURNF NTR_NAME(0)
	CASE 人物_村人
		RETURNF "村人"
	CASE 人物_客
		RETURNF "客"
	CASEELSE
		IF (1 <= 相手番号) && (相手番号 <= CHARANUM)
			RETURNF CALLNAME:相手番号
		ELSE
			RETURNF "？？"
		ENDIF
	ENDSELECT

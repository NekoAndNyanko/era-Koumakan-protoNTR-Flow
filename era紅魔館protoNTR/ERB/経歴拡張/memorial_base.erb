;-------------------------------------------------------------------------------
;初体験の文字列を作成する
;　相手番号が-1の時、バイブ相手などの特殊ケース
@memorial_create(キャラ番号,相手番号,内容)
	#FUNCTIONS
	#DIM キャラ番号
	#DIM 相手番号
	#DIMS 内容
	#DIMS 日時
	#DIMS 場所
	#DIMS 相手 = ""

	SIF !INRANGE(キャラ番号,0,CHARANUM)
		RETURNF 

	;悩むところだけど、具体的な日付が明らかじゃない方が個人的に好み
	;日時 = %暦法月+"月"+暦法日+"日"%
	日時 = %日付_月(暦法月)+"の"+天候(天候値)+"の日に"%

	場所 = %GETPLACENAME(CFLAG:キャラ番号:現在位置)+"で"%
	
	;行為者が行為者の初めてを奪うことの回避。
	IF キャラ番号 == 相手番号
		RETURNF 
	ENDIF
	;IF キャラ番号 == TCVAR:キャラ番号:行為者
	;	IF 相手 == ""
	;		IF 相手 != CALLNAME:TARGET
	;			相手 = %CALLNAME:TARGET+"に"%
	;		ELSE
	;			相手 = %CALLNAME:PLAYER+"に"%
	;		ENDIF
	;	ENDIF
	;ENDIF
	SELECTCASE 相手番号
		CASE IS == -1
			;自分でバイブで破った場合
			相手 = %"自らの手で"%
		CASE IS < CHARANUM
			相手 = %CALLNAME:相手番号+"に"%
		CASE IS == 人物_訪問者
			相手 = %NTR_NAME(0)+"に"%
		CASE IS == 人物_客, 人物_村人
			相手 = %"名も知らぬ男に"%
		CASEELSE
			相手 = %NTR_NAME(0)+"に"%
	ENDSELECT

	IF 内容 == ""
		SELECTCASE TCVAR:キャラ番号:行為者
			CASE IS == 0
				; 行為者があなた
				IF TALENT:キャラ番号:恋慕
					内容 = %"捧げた"%
				ELSEIF GETBIT(CFLAG:キャラ番号:既成事実,0)
					内容 = %"許した"%
				ELSE
					内容 = %"奪われた"%
				ENDIF
			CASE IS == 人物_訪問者
				IF TALENT:キャラ番号:NTR || (キャラ番号 == 人物_あなた && (FLAG:1840 >= 11 && FLAG:1840 <= 15))
					内容 = %"捧げた"%
				ELSEIF NTR_CHK_FAVORABLY(キャラ番号, FAV_寝取られ寸前) || (キャラ番号 == 人物_あなた && FLAG:1840 == 10)
					内容 = %"捧げた"%
				ELSEIF NTR_CHK_FAVORABLY(キャラ番号, FAV_寝取られそう)
					内容 = %"許した"%
				ELSEIF NTR_CHK_FAVORABLY(キャラ番号, FAV_主人より高い)
					内容 = %"許した"%
				ELSEIF NTR_CHK_FAVORABLY(キャラ番号, FAV_うふふする程度) 
					内容 = %"許した"%
				ELSEIF TALENT:キャラ番号:浮気公認
					内容 = %"奪ってもらった"%
				ELSE
					内容 = %"奪われた"%
				ENDIF
			CASE IS == 人物_客
				内容 = %"買われた"%
			CASEELSE
				; 行為者が住人
				; 住人からの行動なので「奪われた」は無い。
				IF キャラ番号 ==  TCVAR:キャラ番号:行為者
					;奪った側
					IF 相手番号 == 0
						;相手があなた
						IF TALENT:相手番号:恋慕
							内容 = %"捧げた"%
						ELSE
							内容 = %"許した"%
						ENDIF
					ELSEIF 相手番号 == 人物_訪問者
						IF TALENT:相手番号:NTR
							内容 = %"捧げた"%
						ELSEIF NTR_CHK_FAVORABLY(相手番号, FAV_寝取られ寸前) 
							内容 = %"捧げた"%
						ELSE
							内容 = %"許した"%
						ENDIF
					ELSE
						; 住人同士
						内容 = %"許した"%
					ENDIF
				ELSE
					;奪われた側（たぶんここは死に分岐）
					IF 相手番号 == 0
						;相手があなた
						IF TALENT:キャラ番号:恋慕
							内容 = %"捧げた"%
						ELSEIF GETBIT(CFLAG:キャラ番号:既成事実,0)
							内容 = %"許した"%
						ELSE
							内容 = %"許した"%
						ENDIF
					ELSEIF 相手番号 == 人物_訪問者
						IF TALENT:キャラ番号:NTR
							内容 = %"捧げた"%
						ELSEIF NTR_CHK_FAVORABLY(キャラ番号, FAV_寝取られ寸前)
							内容 = %"捧げた"%
						ELSEIF TALENT:キャラ番号:浮気公認
							内容 = %"奪ってもらった"%
						ELSE
							内容 = %"許した"%
						ENDIF
					ELSE
						; 住人同士
						内容 = %"許した"%
					ENDIF
				ENDIF
		ENDSELECT
	ENDIF
RETURNF 日時+場所+相手+内容


;-------------------------------------------------------------------------------
;会話コマンド(拡張版) - 勃たなくなった事について話す 実行判定
; RETURN 0 コマンドの実行不可
; RETURN 1 コマンドの実行可能
@COM300_12_ENABLE
	#DIM 奴隷
	#DIM 調教者

	奴隷 = TARGET:0
	調教者 = PLAYER:0
	RESULTS:0 = %"[12]-勃起しなくなった事について"%
	IF TCVAR:奴隷:会話不能
		RETURN 0
	ELSEIF TALENT:奴隷:恋慕 == 0
		;恋慕ついてないとダメ（恋慕なし分岐がめどいので）
		RETURN 0
	ELSEIF !CFLAG:奴隷:告白成功済
		;告白した相手じゃないとダメ
		RETURN 0
	ELSEIF CFLAG:調教者:勃起条件_キャラ > 0 || CFLAG:調教者:勃起条件_プレイ > 0
		;すでに勃起する条件が設定されているとダメ
		RETURN 0
	ELSEIF CFLAG:調教者:ペニス用貞操帯着用 == 0 && MAXBASE:調教者:勃起 <= 勃起制限　
		;勃起不全の場合だけ成立
		RETURN 1
	ENDIF
RETURN 0

;-------------------------------------------------------------------------------
;会話コマンド(拡張版) - 勃たなくなった事について話す
; RETURN 0 コマンドの実行に失敗
; RETURN 1 コマンドの実行に成功
;SOURCEは合計300ぐらいの変化でいいかな
@COM300_12
	#DIM 成否判定
	#DIM 奴隷
	#DIM 調教者

	奴隷 = TARGET:0
	調教者 = PLAYER:0
	;実行判定が通らない時に呼ばれた時対策
	CALL COM300_12_ENABLE()
	IF !RESULT:0
		RETURN 0
	ELSE
		;特殊会話すると会話不能が増える
		TCVAR:奴隷:会話不能 ++
	ENDIF
	;会話累積値を増やしたりの処理は共通、時間は少し多めに
	LOSEBASE:気力 += 100
	DOWNBASE:調教者:気力 += 100
	DOWNBASE:奴隷:気力 += 100
	TCVAR:会話累積値 += 200 / (3 + ABL:MASTER:話術技能)
	TIME += 15
	;-----------------------------------------------------------------------------
	EXP:MASTER:会話経験 ++
	TFLAG:コマンド成功度 = 0
	IF TALENT:奴隷:浮気公認 > 0 || (ABL:奴隷:サドっ気-2)
		;浮気公認してるか、サドっ気が３以上あるならこっち
		CALL COM300_12_02
	ELSE
		;通常はこっち
		CALL COM300_12_01
	ENDIF
RETURN RESULT:0
RETURN 0

;-------------------------------------------------------------------------------
;勃たなくなった - 通常（恋人）
@COM300_12_01
	#DIM 奴隷
	#DIM 調教者

	奴隷 = TARGET:0
	調教者 = PLAYER:0
	PRINTFORM %CALLNAME:調教者+"が勃起しなくなってしまったことを告白すると、"%
	IF NTR_CHK_FAVORABLY(奴隷, FAV_寝取られ寸前)
		;寝取られ寸前だと心配もしてくれない
		PRINTFORML %CALLNAME:奴隷+"は興味なさげに股間を見ると、軽く溜息をついた。"%
	ELSEIF NTR_CHK_FAVORABLY(奴隷, FAV_寝取られそう)
		;寝取られそうであれば慰めてはくれる（が助けてはくれない）
		PRINTFORML %CALLNAME:奴隷+"はそのうち治るから、心配しないでと慰めた。"%
	ELSE
		;通常なら恋慕があるので治すのに積極的
		PRINTFORML %CALLNAME:奴隷+"は一緒に治していきましょう、と微笑んだ。"%
		;恋人相手にだけは勃起上限が増えるようになる
		CFLAG:調教者:勃起条件_キャラ = 奴隷
	ENDIF
	TRYCALLLIST
		FUNC KOJO_MESSAGE_COM_K{CFLAG:奴隷:297}_300_12_01(奴隷, 調教者)
		FUNC KOJO_MESSAGE_COM_KU_300_12_01(奴隷, 調教者)
	ENDFUNC
RETURN 0


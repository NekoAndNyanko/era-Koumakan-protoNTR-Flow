;-------------------------------------------------------------------------------
;(訪問者宅にて)訪問者と会話コマンド(拡張版) - お互いについて
;「あなた」以外で呼び出しても大丈夫(選択肢はランダムになる)
; @return 0 コマンドの実行に失敗, 1 コマンドの実行に成功
@COM460_02(奴隷)
	#DIM 奴隷
	#DIM SKIPDISP退避
	#DIMS 形容１
	#DIMS 形容２
	CALL COM460_02_ENABLE
	IF RESULT:0 == 0
		RETURN 0
	ENDIF
	;SKIPDISPが既に設定されているかもしれないので退避して後で復帰
	SKIPDISP退避 = ISSKIP()
	IF !NTR_CHK_VISIBLE(CFLAG:奴隷:現在位置)
		SKIPDISP 1
	ENDIF
	SELECTCASE ( TALENT:奴隷:態度 + TALENT:奴隷:応答 + TALENT:奴隷:度胸 + TALENT:奴隷:プライド )
		CASE IS < 0
			形容１ = %"扱いやすくて"%
		CASEELSE
			形容１ = %"手間はかかるが"%
	ENDSELECT
	SELECTCASE ( TALENT:奴隷:度胸 + TALENT:奴隷:体型 )
		CASE IS < 0
			形容２ = %"可愛い"%
		CASEELSE
			形容２ = %"綺麗な"%
	ENDSELECT
	PRINTFORML %CALLNAME:奴隷+"は自分の事をどう思っているのかと尋ねた……"%
	SELECTCASE CFLAG:奴隷:屈服度
		CASE IS <  200
			PRINTFORML %NTR_NAME(0)+"は"+CALLNAME:奴隷+"の事を『商品』候補と思っているようだ"%
			PRINTFORML %"[0]-"+NTR_NAME(0)+"は最低の強姦魔だ"%
			PRINTFORML %"[1]-『商品』になるつもりはない"%
		CASE IS <  400
			PRINTFORML %NTR_NAME(0)+"は"+CALLNAME:奴隷+"の事を『商品』と思っているようだ"%
			PRINTFORML %"[0]-"+NTR_NAME(0)+"は最低の強姦魔だ"%
			PRINTFORML %"[1]-『商品』になるつもりはない"%
			PRINTFORML %"[2]-『商品』だと言うならもう少し丁寧に扱って欲しい"%
		CASE IS <  600
			PRINTFORML %NTR_NAME(0)+"は"+CALLNAME:奴隷+"の事を『"+形容１+形容２+"商品』と思っているようだ"%
			PRINTFORML %"[1]-『商品』になるつもりはない"%
			PRINTFORML %"[2]-『商品』だと言うならもう少し丁寧に扱って欲しい"%
			PRINTFORML %"[3]-（……褒められても喜んでいいのかわからない）"%
		CASE IS <  800
			PRINTFORML %NTR_NAME(0)+"は"+形容１+形容２+CALLNAME:奴隷+"の事を単なる『商品』にしておくのは勿体無いと思っているようだ"%
			PRINTFORML %"[2]-『商品』だと言うならもう少し丁寧に扱って欲しい"%
			PRINTFORML %"[3]-（……褒められても喜んでいいのかわからない）"%
			PRINTFORML %"[4]-（……まあ、褒められたのだから悪い気はしない）"%
		CASE IS < 1000
			PRINTFORML %NTR_NAME(0)+"は"+CALLNAME:奴隷+"の事を"+形容１+形容２+"ペットのようなものと思っているようだ"%
			PRINTFORML %"[3]-（……褒められても喜んでいいのかわからない）"%
			PRINTFORML %"[4]-（……まあ、褒められたのだから悪い気はしない）"%
			PRINTFORML %"[5]-"+NTR_NAME(0)+"にそう言われるとなんだか嬉しい"%
		CASEELSE
			PRINTFORML %NTR_NAME(0)+"は"+CALLNAME:奴隷+"の事を"+形容１+形容２+"恋人のようなものと思っているようだ"%
			PRINTFORML %"[4]-（……まあ、褒められたのだから悪い気はしない）"%
			PRINTFORML %"[5]-"+NTR_NAME(0)+"にそう言われるとなんだか嬉しい"%
			PRINTFORML %"[6]-"+NTR_NAME(0)+"の事が好き"%
	ENDSELECT
	;選択
	$COM460_02_INPUT_LOOP
	IF 奴隷 == MASTER
		;対象が「あなた」の場合だけ入力を要求する
		INPUT
	ELSE
		RESULT:0 = RAND:7
		;CLEARLINEでチラチラするかもしれないけどまあ妥協
		PRINTFORML %"("+CALLNAME:奴隷+"は "+TOSTR(RESULT:0)+" を選択しました)"%
	ENDIF
	TRYCALLFORM COM460_02_%TOSTR(RESULT:0,"00")%
	IF RESULT:0 == 1
		TIME += 5
		EXP:奴隷:会話経験 ++
	ELSE
		CLEARLINE 1
		GOTO COM460_02_INPUT_LOOP
	ENDIF
	SKIPDISP SKIPDISP退避
	RETURN 1
RETURN 0


;-------------------------------------------------
;アイマスク
;SM系コマンド、レベル1
;-------------------------------------------------
@COM104
;着脱の処理
TEQUIP:アイマスク = !TEQUIP:アイマスク

;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
DOWNBASE:体力 += 0
DOWNBASE:気力 += 80

SOURCE:恐怖 = 700
SOURCE:露出 = 100
SOURCE:逸脱 = 300
SOURCE:反感 = 600

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;緊縛経験が高いと消費減少
IF EXP:緊縛経験 < EXPLV:3
	TIMES DOWNBASE:気力 , 1.00
ELSEIF EXP:緊縛経験 < EXPLV:4
	TIMES DOWNBASE:気力 , 0.90
ELSE
	TIMES DOWNBASE:気力 , 0.70
ENDIF

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
EXP:緊縛経験 += 2
;同性愛　レズなら戻り値1ゲイなら戻り値2
IF HETEROSEX(TARGET,PLAYER)
	EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 1
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 1
ENDIF

RETURN 1
;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM104(ARG)
PRINTL ＜アイマスク装着中＞

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
DOWNBASE:ARG:体力 += 0
DOWNBASE:気力 += 40

SOURCE:ARG:恐怖 += 350
SOURCE:ARG:露出 += 50
SOURCE:ARG:逸脱 += 150
SOURCE:ARG:反感 += 300

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;緊縛経験が高いと消費減少
LOCAL = 40
IF EXP:ARG:緊縛経験 < EXPLV:3
	TIMES LOCAL , 1.00
ELSEIF EXP:ARG:緊縛経験 < EXPLV:4
	TIMES LOCAL , 0.90
ELSE
	TIMES LOCAL , 0.70
ENDIF
DOWNBASE:ARG:気力 += LOCAL

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
EXP:ARG:緊縛経験 ++

RETURN 1


;-------------------------------------------------
;解开贞操帯もらう
;-------------------------------------------------
;あなたが着用させられている解开贞操帯もらう
;
;
;-------------------------------------------------
@COM419
#DIM 装着者
IF CFLAG:MASTER:阴茎用贞操帯装着者 == 人物_訪問者
	PRINTFORML %CALLNAME:MASTER%请求%NTR_NAME(0)%取下贞操带。
	IF TIME_PROGRESS(CFLAG:MASTER:阴茎用贞操帯着用) < 時間_1WEEK
		;７日経過していない
		PRINTFORML %NTR_NAME(0)%说如果不记得时间了的话，就再从今天开始数起吧。
		;立場をわからされる事で屈服度が増加
		SOURCE:MASTER:被动 += 100 + 200 * ABL:MASTER:顺从
		CALL NTR_ADD_SURRENDER(MASTER, (20 + RAND:20))
		;着用日をリセット
		CFLAG:MASTER:阴茎用贞操帯着用 = TIME_PROGRESS(0)
	ELSE
		;７日我慢できた
		PRINTFORML %NTR_NAME(0)%说已经原谅%CALLNAME:MASTER%了，然后取下了贞操带。
		;阴茎用贞操帯解除
		CALL DISMOUNT_P_CHASTITY_BELT(MASTER)
		SOURCE:MASTER:被动 += 100 + 200 * ABL:MASTER:顺从
	ENDIF
ELSE
	装着者 = CFLAG:MASTER:阴茎用贞操帯装着者
	PRINTFORML %CALLNAME:MASTER%请求%CALLNAME:装着者%取下贞操带。
	IF TIME_PROGRESS(CFLAG:MASTER:阴茎用贞操帯着用) < 時間_1DAY
		;１日経過していない
		PRINTFORML %CALLNAME:装着者%说如果不记得时间了的话，就再从今天开始数起吧。
		;立場をわからされる事で屈服度が増加
		SOURCE:MASTER:被动 += 100 + 200 * ABL:MASTER:顺从
		CALL NTR_ADD_SURRENDER(MASTER, (20 + RAND:20))
		;着用日をリセット
		CFLAG:MASTER:阴茎用贞操帯着用 = TIME_PROGRESS(0)
	ELSE
		;１日我慢できた
		PRINTFORML %CALLNAME:装着者%说已经原谅%CALLNAME:MASTER%了，然后取下了贞操带。
		;阴茎用贞操帯解除
		CALL DISMOUNT_P_CHASTITY_BELT(MASTER)
		SOURCE:MASTER:被动 += 100 + 200 * ABL:MASTER:顺从
	ENDIF
ENDIF

RETURN 1



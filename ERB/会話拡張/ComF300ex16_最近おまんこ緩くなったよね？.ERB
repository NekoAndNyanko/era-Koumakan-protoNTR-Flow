;-------------------------------------------------------------------------------
;会话コマンド(拡張版) - 最近おまんこ緩くなったよね？ 実行判定
; RETURN 0 コマンドの実行不可
; RETURN 1 コマンドの実行可能
@COM300_16_ENABLE
#DIM 奴隷
奴隷 = TARGET:0
IF TCVAR:奴隷:会话不能
	RETURN 0
ELSEIF TALENT:奴隷:亲爱
	;亲爱持ちには可哀想過ぎて指摘できない
	RETURN 0
ELSEIF TALENT:奴隷:恋慕 == 0 && TALENT:奴隷:公众便所 == 0
	;相手が恋人あるいは公众便所でなければ指摘できない
	RETURN 0
ELSEIF BASE:奴隷:Ｖ松弛度 < MAXBASE:奴隷:Ｖ松弛度
	;最大値が更新された時とその翌日のみ可能
	RETURN 0
ENDIF
SELECTCASE BASE:奴隷:Ｖ松弛度
	CASE   0 TO 249
		RETURN 0
	CASEELSE
		RESULTS:0 = %"[16]-"+CALLNAME:奴隷+"のおまんこ緩くなったよね……？"%
		RETURN 1
ENDSELECT
RETURN 0

;-------------------------------------------------------------------------------
;会话コマンド(拡張版) - 最近おまんこ緩くなったよね？話す
; RETURN 0 コマンドの実行に失敗
; RETURN 1 コマンドの実行に成功
@COM300_16
#DIM 調教者
#DIM 奴隷
調教者 = PLAYER:0
奴隷 = TARGET:0

SELECTCASE BASE:奴隷:Ｖ松弛度
	CASE   0 TO 249
		RETURN 0
	CASEELSE
		CALL MESSAGE_COM_300_16(調教者,奴隷)
ENDSELECT
PRINTFORML %"[1]-あまり緩くなると困る"%
PRINTFORML %"[2]-今の"+締り具合名称(BASE:奴隷:Ｖ松弛度)+"具合が好き"%
PRINTFORML %"[3]-もっと緩い方が好き"%
$COM300_16_01_INPUT_LOOP
INPUT
TRYCCALLFORM COM300_16_%TOSTR(RESULT:0,"00")%,調教者,奴隷
	RETURN RESULT:0
CATCH
	CLEARLINE 1
	GOTO COM300_16_01_INPUT_LOOP
ENDCATCH
RETURN 1

;-------------------------------------------------------------------------------
;会话拡張：最近おまんこ緩くなったよね？
;　前提：公众便所
@MESSAGE_COM_300_16(調教者,奴隷)
#DIM 調教者
#DIM 奴隷
PRINTFORM %CALLNAME:調教者+"がヴァギナが緩くなったのではないかと指摘すると、"%
IF TALENT:奴隷:恋慕
	IF TALENT:奴隷:浮気公認 > 2
		IF TALENT:奴隷:公众便所
			;恋慕＆浮気公認＆公众便所
			PRINTFORML %CALLNAME:奴隷+"は望み通りにした結果なのに不満があるのかと言い返してきた。"%
		ELSE
			;恋慕＆浮気公認
			PRINTFORML %CALLNAME:奴隷+"は"+NTR_NAME(0)+"の阴茎が大きすぎるのかもしれない、と笑った。"%
		ENDIF
	ELSE
		IF TALENT:奴隷:公众便所
			;恋慕＆公众便所
			PRINTFORML %CALLNAME:奴隷+"はお客様が手加減してくれないから、仕方が無いのだと言い訳をした。"%
		ELSE
			;恋慕
			PRINTFORML %CALLNAME:奴隷+"は"+CALLNAME:調教者+"のせいでこうなったのだと言い返してきた。"%
		ENDIF
	ENDIF
ELSEIF TALENT:奴隷:公众便所
	;公众便所のみ
	PRINTFORML %CALLNAME:奴隷+"はお客様に楽しんで貰えないと"+NTR_NAME(4)+"に怒られてしまうと慌てだした。"%
ELSE
	;恋慕でも公众便所でもなければここにはこないはず
	RETURN 0
ENDIF
TRYCALLLIST
	FUNC KOJO_MESSAGE_COM_K{CFLAG:奴隷:口上パターン}_300_16_01(奴隷, 調教者)
	FUNC KOJO_MESSAGE_COM_KU_300_16_01(奴隷, 調教者)
ENDFUNC
RETURN 1


@COM300_20_3(判定,类型)
#DIM 判定
#DIM 类型
#DIM LOOP_I
#DIM LOOP_II
#DIM 总可更新经验数
#DIM 可更新经验数
#DIM ROLLDICE
#DIM 更新经验
#DIM UPDATEEXP,200
#DIM D_UPDATEEXP,200

;判定=更新多少个经验
;类型=优先抽取哪一类经验
;额外有20%概率抽取刻印和重要的回忆
;类型1 有40%的概率抽取普通经验 40%的概率抽取H相关经验 20%的概率抽取NTR相关经验
;类型2 有10%的概率抽取普通经验 70%的概率抽取H相关经验 20%的概率抽取NTR相关经验
;类型4 有10%的概率抽取普通经验 30%的概率抽取H相关经验 60%的概率抽取NTR相关经验
;
;首先拉取可抽取经验列表

总可更新经验数 = 0
FOR LOOP_I, 0, 127
	IF EXP:(LOOP_I+150) != EXP:LOOP_I && EXP:LOOP_I != 0
		UPDATEEXP:总可更新经验数 = LOOP_I
		总可更新经验数 ++
	ENDIF
NEXT


;没有可以更新的经验
IF 总可更新经验数 == 0	
	PRINTL 好像继续问下去也问不出什么了...
	RETURN 0
ENDIF

更新经验 = 0

;总可更新经验数 --	

SIF 判定 > 3	
	判定 = 3

FOR LOOP_I, 1, 判定
	IF 类型 == 1 
		;70-77 日常
		;0-62 普通H
		;80-127 NTR
		ROLLDICE = RAND:100
		SELECTCASE ROLLDICE
			CASE 0 TO 20
				可更新经验数 = 0
				FOR LOOP_II, 0, 总可更新经验数
					IF UPDATEEXP:LOOP_II > 79
						D_UPDATEEXP:可更新经验数 = UPDATEEXP:LOOP_II
						可更新经验数 ++ 
					ENDIF
				NEXT	

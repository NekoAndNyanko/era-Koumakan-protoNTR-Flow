;摄影した写真の内容取得
;@return 写真内容コード
@CHOOSE_PHOTO(キャラ番号,部屋番号)
#FUNCTION
#DIM キャラ番号
#DIM 部屋番号
;訪問者と一緒で、何かしらの行為中であれば寝取られ姿の摄影
IF CFLAG:キャラ番号:現在位置 == FLAG:访问者当前位置 && FLAG:訪問者との行為 != 0
	SELECTCASE FLAG:訪問者との行為
		CASE NTR_行为_キス
			RETURNF 写真_NTR_キス
		CASE NTR_行为_爱抚
			RETURNF 写真_NTR_爱抚
		CASE NTR_行为_胸爱抚
			RETURNF 写真_NTR_胸爱抚
		CASE NTR_行为_口交
			RETURNF 写真_NTR_口交
		CASE NTR_行为_六九式
			RETURNF 写真_NTR_六九式
		CASE NTR_行为_素股
			RETURNF 写真_NTR_素股
		CASE NTR_行为_Ｖ正常位 TO NTR_行为_Ｖ背面立位
			RETURNF 写真_NTR_Ｖ性爱
		CASE NTR_行为_Ａ正常位 TO NTR_行为_Ａ背面立位
			RETURNF 写真_NTR_Ａ性爱
	ENDSELECT
ENDIF
;訪問者と一緒で、住人からのカウンターセクハラの場合
IF CFLAG:キャラ番号:現在位置 == FLAG:访问者当前位置 && FLAG:訪問者との行為 == 0
	SELECTCASE CFLAG:キャラ番号:NTRカウンターセクハラ
		CASE NTR_CNT_接吻, NTR_CNT_深吻
			RETURNF 写真_NTR_キス
		CASE NTR_CNT_揉胸
			RETURNF 写真_NTR_胸爱抚
		CASE NTR_CNT_贴近身体, NTR_CNT_耳边吹气, NTR_CNT_揉搓股间
			RETURNF 写真_NTR_接触
		CASE NTR_CNT_背面拥抱, NTR_CNT_正面拥抱
			RETURNF 写真_NTR_抱擁
	ENDSELECT
ENDIF
;訪問者との行為中でなければ通常の摄影
SELECTCASE 部屋番号
	CASE GET_PRIVATE_ROOM(キャラ番号)
		IF CFLAG:(キャラ番号):睡眠
			RETURNF 写真_寝顔
		ELSEIF CFLAG:キャラ番号:自慰中
			RETURNF 写真_自慰
		ELSEIF RAND(2) == 1
			RETURNF 写真_着替え
		ENDIF
	CASE 位置_红魔馆_正门
		IF CSVNAME(NO:キャラ番号) == "紅美鈴" && RAND(3) == 1
			RETURNF 写真_居眠り
		ENDIF
	CASE 位置_红魔馆_大图书馆
		IF RAND(2) == 1
			RETURNF 写真_読書
		ENDIF
	CASE 位置_红魔馆_厨房
		RETURNF 写真_料理
	CASE 位置_红魔馆_大浴场
		RETURNF 写真_入浴
	CASE 位置_红魔馆_屋外厕所,位置_红魔馆_一楼厕所,位置_红魔馆_二楼厕所
		RETURNF 写真_トイレ
	CASEELSE
		RETURNF 写真_普段
ENDSELECT
RETURNF 写真_普段



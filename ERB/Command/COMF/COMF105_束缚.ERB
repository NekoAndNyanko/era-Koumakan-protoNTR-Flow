;-------------------------------------------------
;绳
;SM系コマンド、レベル3
;-------------------------------------------------
@COM105
;着脱の処理

TEQUIP:绳 = !TEQUIP:绳
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、气力
DOWNBASE:体力 += 30
DOWNBASE:气力 += 120

SOURCE:苦痛 = 300
SOURCE:恐怖 = 900
SOURCE:露出 = 200
SOURCE:屈从 = 250
SOURCE:逸脱 = 300
SOURCE:反感 = 700

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;紧缚经验が高いと消費減少
IF EXP:紧缚经验 < EXPLV:3
	TIMES DOWNBASE:体力 , 1.00
	TIMES DOWNBASE:气力 , 1.00
ELSEIF EXP:紧缚经验 < EXPLV:4
	TIMES DOWNBASE:体力 , 0.90
	TIMES DOWNBASE:气力 , 0.90
ELSE
	TIMES DOWNBASE:体力 , 0.70
	TIMES DOWNBASE:气力 , 0.70
ENDIF

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
EXP:紧缚经验 += 5
;同性愛　レズなら戻り値1ゲイなら戻り値2
IF HETEROSEX(TARGET,PLAYER)
	EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 1
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 1
ENDIF

CALL 确认乳头颜色(TARGET)
CALL 确认乳头大小(TARGET)
CALL 确认小穴颜色(TARGET)
CALL 确认小穴松弛度(TARGET)
CALL 确认肛门颜色(TARGET)
CALL 确认肛门松弛度(TARGET)
RETURN 1
;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM105(ARG)
PRINTL ＜緊縛中＞
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、气力
DOWNBASE:ARG:体力 += 15

SOURCE:ARG:苦痛 += 150
SOURCE:ARG:恐怖 += 450
SOURCE:ARG:露出 += 100
SOURCE:ARG:屈从 += 125
SOURCE:ARG:逸脱 += 150
SOURCE:ARG:反感 += 350

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;紧缚经验が高いと消費減少
LOCAL = 60
IF EXP:ARG:紧缚经验 < EXPLV:3
	TIMES LOCAL , 1.00
ELSEIF EXP:ARG:紧缚经验 < EXPLV:4
	TIMES LOCAL , 0.90
ELSE
	TIMES LOCAL , 0.70
ENDIF
DOWNBASE:ARG:气力 += LOCAL


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
EXP:ARG:紧缚经验 ++

RETURN 1


@COM600

TRYCALL COM417_is_Protected(PLAYER,TARGET,淫纹_恥丘)
SIF RESULT
	RETURN 0
TRYCALL COM417_is_Protected(PLAYER,TARGET,淫纹_胸元)
SIF RESULT
	RETURN 0

PRINTFORML 爱抚実行
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、气力
DOWNBASE:体力 += 5
DOWNBASE:气力 += 50

SOURCE:快Ｃ = 80
SOURCE:快Ｂ = 80
SOURCE:情爱 = 50
SOURCE:性行动 = 60
SOURCE:露出 = 20
SOURCE:肮脏 = 30
SOURCE:逸脱 = 20
SOURCE:反感 = 20

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑郁ソース追加
SIF TALENT:自己爱 < 0 || TALENT:抵抗
	SOURCE:抑郁 += 20
;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
IF (FIRSTTIME(TOSTR(312),1) || FIRSTTIME(TOSTR(20),1)) || (MASTER_POSE(4,4) != TARGET && MASTER_POSE(0,4)) || (STAIN:口 >= 汚れ_阴茎 && (STAIN:口 != 汚れ_母乳 && STAIN:口 != 汚れ_母乳_愛液) && ASSIPLAY == 0 && TALENT:MASTER:污臭耐性 < 2) || TEQUIP:20
	;奴隷の口の汚れがあるときキスはない（愛液と母乳よごれはＯＫ、汚れ無視か助手調教時は問題なし）
	;口球使用中もなし
	SOURCE:肮脏 = 0
	SOURCE:情爱 /= 4
	SOURCE:液体 /= 2
ELSE
	;汚臭鈍感
	SIF TALENT:污臭耐性 > 0
		SOURCE:肮脏 /= 4
	;汚臭敏感
	SIF TALENT:污臭耐性 < 0
		SOURCE:肮脏 *= 3
	;自尊心高い
	SIF TALENT:自尊心 > 0
		SOURCE:肮脏 *= 2
ENDIF


;-------------------------------------------------
;経験の処理
;-------------------------------------------------

;手淫经验
EXP:PLAYER:手淫经验 ++
;自慰经验
EXP:PLAYER:自慰经验 ++

RETURN 1

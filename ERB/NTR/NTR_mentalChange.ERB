;-------------------------------------------------------------------------------
;屈服度加算
;　・加算する屈服度が0以下なら什麽也不做
;　・加算する屈服度が1以上なら加算する
;　・将来難易度調整で加算する屈服度を増減する場合、1が0にはならないようにする
;@return 常に0
@NTR_ADD_SURRENDER(奴隷, 加算値)
#DIM 奴隷
#DIM 加算値
#DIM 好感记录值
;加算値0以下ならなにもしない
IF 0 >= 加算値
	RETURN 0
ENDIF
IF FLAG:Flow版本
	;结婚戒指していると若干影響軽減。0にはならない。
	; IF EQUIP:奴隷:配件 == 衣装_配件_结婚戒指
	; 	加算値 = (加算値 * 4) / 5
	; 	SIF 加算値 < 1
	; 		加算値 = 1
	; ENDIF
	;NTR和姦の時は若干影響軽減(2/3)
	SIF IS_NTR_SOFT()
		加算値 = MAX(((加算値 * 2) / 3), 1)
	;屈服度補正をかける。最大50倍。屈服度倍率が0のときはかけないようにする
	IF FLAG:屈服度倍率 == 0
		CFLAG:奴隷:屈服度 += 加算値
	ELSE
		CFLAG:奴隷:屈服度 += 加算値 * (FLAG:屈服度倍率) / 10
	ENDIF
	IF GETBIT(FLAG:ＮＴＲパッチ設定,1)
		;打开好感度吸收的情况下进行好感度的等值减少
		IF FLAG:屈服度倍率 == 0
			IF 加算値 > CFLAG:奴隷:好感度
				好感记录值 = CFLAG:奴隷:好感度
				CFLAG:奴隷:好感度 = 0
			ELSE
				好感记录值 = 加算値
				CFLAG:奴隷:好感度 -= 加算値
			ENDIF
			IF NTR_CHK_VISIBLE(FLAG:訪問者の現在位置)
				IF 好感记录值 != 0
					PRINTFORML 屈服度+{加算値} 好感度-{好感记录值}
				ELSE
					PRINTFORML 屈服度+{加算値}
				ENDIF
			ENDIF
		ELSE
			IF (加算値 * (FLAG:屈服度倍率) / 10) > CFLAG:奴隷:好感度
				好感记录值 = CFLAG:奴隷:好感度
				CFLAG:奴隷:好感度 = 0
			ELSE
				好感记录值 = 加算値
				CFLAG:奴隷:好感度 -= 加算値 * (FLAG:屈服度倍率) / 10
			ENDIF
			IF NTR_CHK_VISIBLE(FLAG:訪問者の現在位置)
				IF 好感记录值 != 0
					PRINTFORML 屈服度+{加算値 * (FLAG:屈服度倍率) / 10} 好感度-{好感记录值 * (FLAG:屈服度倍率) / 10}
				ELSE
					PRINTFORML 屈服度+{加算値 * (FLAG:屈服度倍率) / 10}
				ENDIF
			ENDIF
		ENDIF
		; SIF CFLAG:奴隷:好感度 == 0 && 好感记录值 != 0
		; 	PRINTFORML 好❤感❤度❤归❤零
	ELSE
		IF NTR_CHK_VISIBLE(FLAG:訪問者の現在位置)
			IF FLAG:屈服度倍率 == 0
				PRINTFORML 屈服度+{加算値}
			ELSE
				PRINTFORML 屈服度+{加算値 * (FLAG:屈服度倍率) / 10}
			ENDIF
		ENDIF
	ENDIF
ELSE
	;原算法
	;结婚戒指していると若干影響軽減。0にはならない。
	IF EQUIP:奴隷:配件 == 衣装_配件_结婚戒指
		加算値 = (加算値 * 4) / 5
		SIF 加算値 < 1
			加算値 = 1
	ENDIF
	;NTR和姦の時は若干影響軽減(2/3)
	IF IS_NTR_SOFT() && TALENT:奴隷:访问者之妻 == 0
		加算値 = MAX(((加算値 * 2) / 3), 1)
	ELSEIF TALENT:奴隷:访问者之妻 == 1
		TIMES 加算値,1.3
	ENDIF
	;屈服度補正をかける。最大50倍。屈服度倍率が0のときはかけないようにする
	IF FLAG:屈服度倍率 == 0
		CFLAG:奴隷:屈服度 += 加算値
	ELSE
		CFLAG:奴隷:屈服度 += 加算値 * (FLAG:屈服度倍率) / 10
	ENDIF
	IF !FLAG:真实模式
		IF NTR_CHK_VISIBLE(FLAG:訪問者の現在位置)
			IF FLAG:屈服度倍率 == 0
				PRINTFORML 屈服度+{加算値}
			ELSE
				PRINTFORML 屈服度+{加算値 * (FLAG:屈服度倍率) / 10}
			ENDIF
		ENDIF
	ENDIF
ENDIF
RETURN 0

;-------------------------------------------------------------------------------
;好感度吸収
;@return 常に0
@NTR_DRAIN_LOVE(奴隷,減少値)
#DIM 奴隷
#DIM 減少値
IF FLAG:Flow版本
	;到屈服度增加（NTR_ADD_SURRENDER）中处理
	RETURN 0
ELSE
	;亲爱があれば減らない
	SIF TALENT:奴隷:亲爱
		RETURN 0
	;结婚戒指していると若干影響軽減(4/5)。0にはならない。
	IF EQUIP:奴隷:配件 == 衣装_配件_结婚戒指
		減少値 = MAX(((減少値 * 4) / 5), 1)
	ENDIF
	;NTR和姦の時は影響軽減(1/4)
	IF IS_NTR_SOFT()
		減少値 = MAX(((減少値 * 1) / 4), 1)
	ENDIF
	;好感度吸収がONの時だけ減る
	IF IS_NTR_DRAIN_LOVE()
		CFLAG:奴隷:好感度 -= 減少値
		;FOR DEBUG 訪問者からの屈服度が高いと好感度吸収も大きい
		;IF CFLAG:奴隷:屈服度 > 500 && CFLAG:奴隷:好感度 > 2000
		;	CFLAG:奴隷:好感度 -= 減少値
		;ENDIF
		;IF CFLAG:奴隷:屈服度 > 1000 && CFLAG:奴隷:好感度 > 3000
		;	CFLAG:奴隷:好感度 -= 減少値
		;ENDIF
	ENDIF
	;恋慕かつ浮気公認してる場合好感度の下限値を設定
	IF TALENT:奴隷:恋慕 && TALENT:奴隷:浮気公認 > 1
		CFLAG:奴隷:好感度 = LIMIT(CFLAG:奴隷:好感度, 1599-TALENT:奴隷:浮気公認*200, 999999)
	ENDIF
	SIF CFLAG:奴隷:好感度 < 0
		CFLAG:奴隷:好感度 = 0
	IF (TCVAR:行為者 < CHARANUM)
		CALL FAVOR_CALC(TARGET)
	ELSE
		IF IS_NTR_DRAIN_LOVE()
			IF NTR_CHK_VISIBLE(CFLAG:奴隷:現在位置)
				PRINTFORML 好感度-{減少値}
			ENDIF
		ENDIF
	ENDIF
ENDIF
RETURN 0


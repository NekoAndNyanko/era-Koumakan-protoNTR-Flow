;-------------------------------------------------------------------------------
;１日の開始時の処理
@EVENTTRAIN
#PRI
#DIM キャラ番号
#DIM LOOP_FLG
VARSET TARGET
;各種数値の初期化
FOR キャラ番号,0,CHARANUM
	;BASEの初期化
	CALL BEFORETRAIN_ResetBases(キャラ番号)
	;CFLAGの初期化
	CFLAG:キャラ番号:勃起度 = 0
	CFLAG:キャラ番号:あなた射精フラグ = 0
	CFLAG:キャラ番号:汚れ発覚 = 汚れ発覚_なし
	CFLAG:キャラ番号:汚れ継続時間 = 0
	CFLAG:キャラ番号:催眠中 = 0 ;角色是否處於催眠中，同時用於防止移动至浴場
	CFLAG:キャラ番号:本日催眠次數 = 0
	CFLAG:キャラ番号:催眠气氛 = 0
	CFLAG:キャラ番号:前回催眠行為 = 0
	FLAG:催眠 = 0
	;TCVARSの初期化
	CALL BEFORETRAIN_ResetTCVars(キャラ番号)
	;性交フラグ
	TEQUIP:キャラ番号:Ｖ性爱 = -1
	TEQUIP:キャラ番号:Ａ性爱 = -1
	;射精処理用文字列変数
	CSTR:キャラ番号:射精判定用 = /
	CSTR:キャラ番号:射精後処理用 = /
	;移动路线初期化
	CALLF RESET_ROUTE(キャラ番号, 1)

NEXT


;催眠で出て行ったまま帰ってこない人の救済措置
FOR キャラ番号, 1, CHARANUM
	IF CFLAG:キャラ番号:現在位置 == 位置_人間の里 || CFLAG:キャラ番号:現在位置 == 位置_民家
		CFLAG:キャラ番号:現在位置 = 位置_红魔馆_正门
		PRINTFORMW %CALLNAME:キャラ番号%不知道从哪里回来了
	ENDIF
NEXT
SIF SAVESTR:10 == ""
	SAVESTR:10 = /
;料理
FLAG:料理 = 0
;時間
IF TIME > CFLAG:MASTER:通常起床時間
	DAY ++
	TIME -= 1440
	CALL 日付変更
	CALL 日間気温設定
ENDIF
CALL 天候状態
;30分毎に館内のキャラを移动させる
LOOP_FLG = 1
WHILE LOOP_FLG
	IF TIME + 30 < CFLAG:MASTER:通常起床時間
		TFLAG:300 = DATETIME()
		TIME += 30
		CALL CHARA_MOVEMENT
	ELSE
		FOR キャラ番号,0,CHARANUM
			;現在位置の保存
			CFLAG:キャラ番号:前ターン位置 = CFLAG:キャラ番号:現在位置
		NEXT
		TIME =  CFLAG:MASTER:通常起床時間
		TFLAG:300 = DATETIME()
		CALL CHARA_MOVEMENT
		BREAK
	ENDIF
WEND
CALL GOODMORNING


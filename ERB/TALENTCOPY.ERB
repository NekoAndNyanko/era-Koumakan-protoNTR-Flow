$INPUT_LOOP
FOR LOCAL,0,CHARANUM
	IF LOCAL == ARG
		;
	ELSE
		PRINTFORML [{LOCAL,3}] - %CALLNAME:LOCAL%
	ENDIF
NEXT
PRINTL [999] - 放弃

INPUT
IF 0 < RESULT && RESULT < 開始時人数
	TARGET = RESULT
	$INPUT_LOOP_1
	PRINTFORML 把%CALLNAME:TARGET%的素质复制给%CALLNAME:ARG%，可以吗？
	PRINTL [0] 是的
	PRINTL [1] 重新考虑
	INPUT
	IF RESULT == 0
		FOR LOCAL,0,191
			TALENT:ARG:LOCAL = TALENT:TARGET:LOCAL
		NEXT
		PRINTL 复制了。
	ELSEIF RESULT == 1
		GOTO INPUT_LOOP
	ELSE
		GOTO INPUT_LOOP_1
	ENDIF

ELSEIF RESULT == 999
	RETURN 0
ELSE
	GOTO INPUT_LOOP
ENDIF

RETURN 0	

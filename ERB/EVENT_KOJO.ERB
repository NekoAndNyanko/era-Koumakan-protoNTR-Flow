;--------------------------------------------------
;@KOJO_MESSAGE_COM関係
;コマンド実行時に出力されます
;--------------------------------------------------
@KOJO_MESSAGE_COM
#DIM 対象

対象 = NO:TARGET
;範囲チェック
IF 対象 >= CHARANUM
	SIF FLAG:情景テキスト設定 > 0
		CALL TRAIN_MESSAGE
	RETURN 0
ENDIF
;口上表示設定チェック
IF FLAG:口上テキスト設定 <= 0
	SIF FLAG:情景テキスト設定 > 0
		CALL TRAIN_MESSAGE
	RETURN 0
ENDIF
;睡眠チェック
IF CFLAG:対象:睡眠
	CALL TRAIN_MESSAGE
	;口球
ELSEIF TEQUIP:20 && SELECTCOM != 107 && FLAG:情景テキスト設定 > 0
	CALL TRAIN_MESSAGE
ELSE
	RESULT = 0
	RESULTS =
	SIF FLAG:口上颜色
		CALL KOJO_COLOR(対象)
	IF TFLAG:50
		TRYCALLLIST
			FUNC KOJO%RESULTS%_MESSAGE_SCOM_K{対象}_{TFLAG:50}
			FUNC KOJO%RESULTS%_MESSAGE_SCOM_KU_{TFLAG:50}
			FUNC TRAIN_MESSAGE
		ENDFUNC
	ELSE
		SIF !FLAG:非公开NTR模式
			CALL NTR_LOCK_REACTION_COM(対象)
		TRYCALLLIST
			FUNC NTR_KOJO%RESULTS%_MESSAGE_COM_K{対象}_{SELECTCOM}
			FUNC KOJO%RESULTS%_MESSAGE_COM_K{対象}_{SELECTCOM}
			FUNC KOJO%RESULTS%_MESSAGE_COM_KU_{SELECTCOM}
			FUNC TRAIN_MESSAGE
		ENDFUNC
	ENDIF
	;埋めていないところは汎用的な処理が可能
	IF RESULT
		CALL NTR_LOCK_REACTION_COM(対象)
		TRYCALLLIST
			FUNC NTR_KOJO%RESULTS%_MESSAGE_COM_K{対象}_00
			FUNC KOJO%RESULTS%_MESSAGE_COM_K{対象}_00
			FUNC KOJO%RESULTS%_MESSAGE_COM_KU_00
		ENDFUNC
	ENDIF
	RESETCOLOR
ENDIF

;--------------------------------------------------
;@KOJO_MESSAGE_COUNTER関係
;カウンター実行時に出力されます
;--------------------------------------------------
@KOJO_MESSAGE_COUNTER(ARG)
#DIM 対象
#DIM BK_TARGET		; TARGET保存

BK_TARGET = TARGET
TARGET = ARG
対象 = NO:TARGET
;範囲チェック
IF 対象 >= CHARANUM
	SIF FLAG:情景テキスト設定 > 0
		CALL TRAIN_MESSAGE
	RETURN 0
ENDIF
;口上表示設定チェック
IF FLAG:口上テキスト設定 <= 0
	IF FLAG:情景テキスト設定 > 0
		CALL EVENT_COUNTER_MESSAGE
	ENDIF
	TARGET = BK_TARGET
	RETURN 0
ENDIF
;口球チェック
IF TEQUIP:ARG:口球 && FLAG:情景テキスト設定 > 0
	CALL EVENT_COUNTER_MESSAGE
	TARGET = BK_TARGET
ELSE
	RESULT = 0
	RESULTS =
	SIF FLAG:口上颜色
		CALL KOJO_COLOR(対象)
	TRYCALLLIST
		FUNC NTR_KOJO%RESULTS%_MESSAGE_COUNTER_K{対象}_{TCVAR:20}
		FUNC KOJO%RESULTS%_MESSAGE_COUNTER_K{対象}_{TCVAR:20}
		FUNC KOJO%RESULTS%_MESSAGE_COUNTER_KU_{TCVAR:20}
		FUNC EVENT_COUNTER_MESSAGE
	ENDFUNC
	RESETCOLOR
	TARGET = BK_TARGET
ENDIF

;-------------------------------------------------
;@KOJO_MESSAGE_PALAMCNG関係
;パラメータ変動をトリガーにした口上
;パラメータ変動後に口上を発動します
;-------------------------------------------------
@KOJO_MESSAGE_PALAMCNG_A
VARSET LOCAL
IF FLAG:口上テキスト設定 <= 0
	SIF FLAG:情景テキスト設定 > 0
		CALL PALAM_MESSAGE_A
	RETURN 0
ENDIF
FOR LOCAL,0,CHARANUM
	SIF TARGET:LOCAL < 1
		CONTINUE
	;TARGET,TARGET:1,…の順に出力
	SIF LOCAL > 0 && TARGET:LOCAL == TARGET
		CONTINUE
	;口上出力用のフラグがないと飛ばす
	SIF !TCVAR:(TARGET:LOCAL):50
		CONTINUE
	LOCAL:1 = TARGET
	TARGET = TARGET:LOCAL
	RESULT = 0
	RESULTS =
	;口上の存在判定 and RESULTSに文字列代入
	TRYCALLFORM KOJO_K{NO:TARGET}
	IF !RESULT && FLAG:情景テキスト設定 > 0
		CALL PALAM_MESSAGE_A
		TARGET = LOCAL:1
		RETURN 0
	ENDIF
	CALL KOJO_MESSAGE_PALAMCNG_A2(LOCAL)
	SIF !RESULT
		LOCAL:2 ++
	TARGET = LOCAL:1
	;避孕套口上は対象一人のみ
	SIF GETBIT(TFLAG:1,0)
		BREAK
NEXT

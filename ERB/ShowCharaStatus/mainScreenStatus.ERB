		FOR LOCAL,1,CHARANUM
			SIF TARGET:LOCAL <= 0
				CONTINUE
			CALL EVENT_COUNTER_SOURCE(TARGET:LOCAL,LOCAL)
		NEXT
		FOR LOCAL,1,CHARANUM
			SIF TARGET:LOCAL <= 0
				CONTINUE
			IF TCVAR:(TARGET:LOCAL):20
				CALL KOJO_MESSAGE_COUNTER(TARGET:LOCAL)
				DRAWLINE
			ENDIF
		NEXT
		FOR LOCAL,1,CHARANUM
			TRYCALL PREGNACY_S_EVENT(LOCAL)
		NEXT

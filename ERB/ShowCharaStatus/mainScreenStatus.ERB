#DIM 奴隷
#DIMS 描写文章
描写文章 = %""%
IF GETBIT(CFLAG:奴隷:淫纹, 淫纹_右頬)
	IF 描写文章 != ""
		描写文章 = %描写文章+"、"%
	ENDIF
	CALL COM417_GetFillingRateByPublicSperm(奴隷)
	SELECTCASE RESULT:1 * RESULT:0
		CASE IS >= 200
			描写文章 = %描写文章+"脸颊上看到了鲜艳的粉红色的娼妇纹"%
		CASE 100 TO 199
			描写文章 = %描写文章+"脸颊上看到了粉红色的娼妇纹"%
		CASE 50 TO 99
			描写文章 = %描写文章+"脸颊上看到了赤色的娼妇纹"%
		CASE 1 TO 49
			描写文章 = %描写文章+"脸颊上看到了赤紫色的娼妇纹"%
		CASEELSE
			描写文章 = %描写文章+"脸颊上看到了紫色的娼妇纹"%
	ENDSELECT
ENDIF
IF TALENT:奴隷:泌乳体质 && BASE:奴隷:母乳 > MAXBASE:奴隷:母乳
	IF 描写文章 != ""
		描写文章 = %描写文章+"、"%
	ENDIF
	SELECTCASE TALENT:奴隷:胸部尺寸
		CASE IS > 0
			描写文章 = %描写文章+"丰满的乳房被母乳涨得鼓起"%
		CASE IS == 0
			描写文章 = %描写文章+"乳房被母乳涨得鼓起"%
		CASE IS < 0
			描写文章 = %描写文章+"精致的乳房被母乳涨得鼓起"%
		CASEELSE
	ENDSELECT
ENDIF
IF 描写文章 != ""
	描写文章 = %CALLNAME:奴隷+"の"+描写文章+"る"%
ENDIF
PRINTFORML %描写文章%
RETURN 0


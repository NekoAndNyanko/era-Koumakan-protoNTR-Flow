;显示主界面的信息栏
;-------------------------------------------------------------------------------
;起床中の基本情報（時間、HPMP、各種パラメータなど）を表示する
@SHOW_STATUS
VARSET LOCAL
TFLAG:100 = TFLAG:101
SIF TFLAG:101 == 1
	TFLAG:100 = 0
SIF TFLAG:101
	TFLAG:101 --
SIF TFLAG:COMABLE管理 == 2
	CALL SHOW_TOUCH
SIF GETBIT(FLAG:雑多設定,2)
	CALL 従者E_進展
;-------------------------------------------------
;料理の時間経過
;-------------------------------------------------
SIF FLAG:料理 > 0
	CALL CEACK_COOKING
;-------------------------------------------------
;キャラの态度
;-------------------------------------------------
CALL CHARA_ATTITUDE
;-------------------------------------------------
;時間経過、キャラの移动
;-------------------------------------------------
IF TFLAG:195
	;TFLAGを戻す
	TFLAG:195 = 0
ELSE
	CALL CHARA_MOVEMENT
	IF TCVAR:MASTER:130 >= 1
		LOCAL:1 = IN_ROOM("MIN", CFLAG:MASTER:現在位置, "CFLAG", GETNUM(CFLAG, "亲密程度"), 1)
		LOCAL:2 = CFLAG:(LOCAL:1):6
		IF LOCAL:2 <= 0 && LOCAL:1 > 0 && CFLAG:(LOCAL:1):現在位置 != CFLAG:(LOCAL:1):前ターン位置 && !CFLAG:(LOCAL:1):睡眠
			PRINTFORMW %CALLNAME:(LOCAL:1)%が入ってきたことにより空気が変わってしまった…
			FOR LOCAL, 0, CHARANUM
				SIF CFLAG:LOCAL:同室 && CFLAG:LOCAL:亲密程度 >= 1 && !CFLAG:LOCAL:睡眠
					CALL KOJO_EVENT(8, LOCAL, LOCAL:1)
			NEXT
		ENDIF
	ENDIF
	IF FLAG:1840 == 10
		FOR LOCAL:0, 1, CHARANUM
			SIF CFLAG:(LOCAL:0):現在位置 == CFLAG:MASTER:現在位置
				CALL NTR_COM416_BATHTIME_INTERRUPT
		NEXT
	ENDIF
	VARSET LOCAL
	CALL INHABITANT_DO		; 住人同士の交流
	CALL VISITER_DO			; 訪問者のアクション
	;恋恋 先注释 有生之年填坑 TODO
	; CALL INTRUDER_DO		; 侵入者(こいし)のアクション
ENDIF
TFLAG:300 = DATETIME()
CFLAG:MASTER:睡眠 = 0
;調教ターゲット＆馴れ合い強度設定
;CALL INFO_SetTarget
;MASTERと同室フラグ
FOR LOCAL,1,CHARANUM
	IF CFLAG:LOCAL:現在位置 == CFLAG:MASTER:現在位置
		CALL 确认肌肤颜色(LOCAL)
		CALL INFO_确认对象状态(LOCAL)
		;下半身下着が見える状態ならフラグ取得
		SIF GETBIT(FLAG:雑多設定,1) && !EQUIP:LOCAL:下半身上着１ && !EQUIP:LOCAL:下半身上着２ && !EQUIP:LOCAL:裙子 && !EQUIP:LOCAL:赛车服 && !EQUIP:LOCAL:连衣裙 && !EQUIP:LOCAL:着物
			CFLAG:LOCAL:ぱんつ確認 = 1
		;同室じゃなく(遭遇発生時)、睡眠状態でなければ発生
		IF !CFLAG:LOCAL:同室 && !CFLAG:LOCAL:睡眠
			;外出宣言判定
			CALL GoOut_SeeYou(LOCAL, 0)
			IF RESULT:0 > 0
				;出かけたので処理中断
				CONTINUE
			ENDIF
			;遭遇口上と情事発覚口上
			CALL AFFAIR_DISCLOSURE(LOCAL, 0)
			;恋慕じゃない場合に合鍵を回収される
			CALL INFO_CheckMyRoom(LOCAL)
			CFLAG:LOCAL:同室 = 1
		ENDIF
	ELSE
		;相手からこちらが見えていて、相手かこちらかが移动したかこちらが押し倒した
		;SIF CAN_MOVE(CFLAG:LOCAL:現在位置, CFLAG:MASTER:現在位置) == 2 && (CFLAG:MASTER:前ターン位置 != CFLAG:MASTER:現在位置 || CFLAG:LOCAL:前ターン位置 != CFLAG:LOCAL:現在位置 || TRAINNAME:PREVCOM == "推到") && !CFLAG:LOCAL:睡眠
		SIF CAN_MOVE(CFLAG:LOCAL:現在位置, CFLAG:MASTER:現在位置) == 2 && (CFLAG:MASTER:前ターン位置 != CFLAG:MASTER:現在位置 || CFLAG:LOCAL:前ターン位置 != CFLAG:LOCAL:現在位置 || PREVCOM == 350) && !CFLAG:LOCAL:睡眠
			CALL AFFAIR_DISCLOSURE(LOCAL, 1)
		CFLAG:LOCAL:同室 = 0
	ENDIF
NEXT
;調教ターゲット＆馴れ合い強度設定
CALL INFO_SetTarget
;ウフフ終了TEQUIP処理
FOR LOCAL,0,CHARANUM
	IF !CFLAG:LOCAL:うふふ || CFLAG:LOCAL:現在位置 != CFLAG:LOCAL:前ターン位置
		CALL CLOTHES_RESET(LOCAL)
		CALL CLOTHES_SETTING_TRAIN(LOCAL)
		FOR LOCAL:1,10,150
			;利尿剂は排泄するまで続く
			SIF LOCAL:1 == 27
				CONTINUE
			TEQUIP:LOCAL:(LOCAL:1) = 0
		NEXT
		IF TFLAG:COMABLE管理 < 2
			BASE:LOCAL:射精 = 0
			TCVAR:LOCAL:イきそう = 0
		ENDIF
	ENDIF
	IF BATHROOM(CFLAG:LOCAL:現在位置)
		EQUIP:LOCAL:0 = 0
		IF CFLAG:LOCAL:うふふ || TCVAR:LOCAL:130 > 2
			TEQUIP:(LOCAL):浴场PLAY = 1
		ELSE
			TEQUIP:(LOCAL):浴场PLAY = 0
		ENDIF
		CALL CLOTHES_SETTING_TRAIN(LOCAL)
	ELSE
		TEQUIP:(LOCAL):浴场PLAY = 0
	ENDIF
	IF OPENPLACE(CFLAG:LOCAL:現在位置)
		IF CFLAG:LOCAL:うふふ == 1
			TEQUIP:(LOCAL):野外PLAY = OPENPLACE(CFLAG:LOCAL:現在位置)
		ELSE
			TEQUIP:(LOCAL):野外PLAY = 0
		ENDIF
	ELSE
		TEQUIP:(LOCAL):野外PLAY = 0
	ENDIF
NEXT
;-------------------------------------------------
;情報表示
;-------------------------------------------------
DRAWLINE
;現在時刻と睡眠可否の表示
CALL INFO_PrintCurrentTime(MASTER)
;現在位置と汚れ状態の表示
CALL INFO_PrintCurrentPosition(MASTER)
;-------------------------------------------------
;TARGET情報とモード切り替え
;-------------------------------------------------
CALL INFO_SetTrainMode
;特殊プレイ状況を表示する
CALL SHOW_EQUIP_2
;HP、MP、勃起、精力のバーを表示する
CALL INFO_PrintHPMPBar(TARGET,MASTER)
;ターゲットがいるなら气氛と理性の表示
IF TARGET > 0
	CALL INFO_绘制对象配件(TARGET)
	CALL INFO_PrintTargetCloth(TARGET)
	CALL INFO_PrintTargetMood(TARGET)
	CALL INFO_PrintTargetReason(TARGET)
	CALL INFO_PrintTargetFeeling(TARGET)
	CALL INFO_PrintPalams(TARGET)
ENDIF
;●マスター状態呼び出し
PRINTFORML %"自分の状態："+SHOW_EQUIP_3(MASTER)%
CALL INFO_PrintPalams(MASTER)
IF TFLAG:COMABLE管理 == 2 || TFLAG:COMABLE管理 == 3
	;うふふ中
	DRAWLINE
	CALL SHOW_EQUIP_1
ENDIF
;数值输出结束，图像区域开始
PRINT -- 
PRINTBUTTON  "[人物图像]", 816
SIF FLAG:AA表示
	PRINTBUTTON  "[图像设置]", 3100
IF CFLAG:うふふ
	IF FLAG:图像_插图显示
		PRINTBUTTON  "[打开动画]", 817
		PRINT [动画重复次数:
		PRINTBUTTON "＜", 818
		PRINTFORM {FLAG:图像_动画}
		PRINTBUTTON "＞", 819
		PRINT ]
	ELSE
		SETCOLOR C_L_GRAY
		PRINTBUTTON  "[关闭动画]", 817
		RESETCOLOR
	ENDIF
ENDIF
PRINTL  ---------
IF FLAG:AA表示
	CALL PRINT_TARGET_IMAGE(TARGET)
	SIF FLAG:图像_立绘类型
		PRINTL
ENDIF
PRINTL
;分割线，图像区域完
CUSTOMDRAWLINE =
IF TFLAG:COMABLE管理 == 3 || TFLAG:COMABLE管理 == 4
	;カウンター
	;;別系統を呼び出すようにしたら、いろいろ楽かと思って
	IF TALENT:MASTER:肉便器
		FOR LOCAL,1,CHARANUM
			SIF TARGET:LOCAL <= 0
				CONTINUE
			CALL EVENT_WC_COUNTER(TARGET:LOCAL,LOCAL)
			CALL EVENT_WC_COUNTER_POSE(TARGET:LOCAL,LOCAL)
		NEXT

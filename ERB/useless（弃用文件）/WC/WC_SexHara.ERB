ENDIF
;;------------------------------------------
;;オトコだったらペナルティ
;;------------------------------------------
;;断背之气でペナ増減
;;搞基中毒でペナ増減
;;体型でペナ増減
;;ズボン系履いてるとペナ増加
;;　　ただし、半ズボンはペナ緩め
;;　　スパッツとブルマはペナ無し
;;裙子だとペナ減少
;;连衣裙（チャイナ服は含まず）だとペナ減少
;;セーラー服だとペナ減少
;;女物下着だとペナ減少
;;エロ下着だとさらにペナ減少
;;男物下着だと増加
IF !HAS_VAGINA(MASTER)
	オトコペナ += 5
	SELECTCASE EQUIP:MASTER:下半身上着１
		CASE 2	;;スパッツ
			;;変化無し
		CASEELSE	;;ズボン／袴
			オトコペナ += 5
	ENDSELECT
	SELECTCASE EQUIP:MASTER:下半身上着２
		CASE 1	;;半ズボン
			オトコペナ += 2
		CASE 2	;;ブルマ
			;;変化無し
	ENDSELECT
	SELECTCASE EQUIP:MASTER:下半身下着２
		CASE 3,4,5								;;ドロワーズ
			オトコペナ -= 1
		CASE 6 TO 15 , 24,25,26					;;くまさんパンツ／ねこさんパンツ／水玉ぱんつ／しましまぱんつ／レースのパンティ
			オトコペナ -= 3
		CASE 16 TO 21 , 40,41					;;フリルぱんつ／ローレグパンツ／レザーパンツ
			オトコペナ -= 2
		CASE 22,23 , 29 TO 39 , 42 TO 50		;;ローライズパンツ／ハイレグパンツ／シースルーショーツ／Tバック／紐パン／オープンレースTバック／小窓付きのレースショーツ
			オトコペナ -= 4
		CASE 101,102,103						;;男物
			オトコペナ += 5
		CASEELSE								;;ノーパン／ばんそうこう／スパッツ／贞操帯
			;;変化無し
	ENDSELECT
	SELECTCASE EQUIP:MASTER:裙子
		CASE 1	;;ミニ裙子
			オトコペナ -= 5
		CASE 2	;;裙子
			オトコペナ -= 3
		CASE 3	;;ロング裙子
			オトコペナ -= 2
		CASE 4	;;タイト裙子
			オトコペナ -= 5
		CASE 5	;;裳
			オトコペナ -= 1
	ENDSELECT
	;;セーラー服
	SIF EQUIP:MASTER:上半身上着２ == 2
		オトコペナ -= 1
	;;连衣裙
	SIF EQUIP:MASTER:连衣裙 == 1
		オトコペナ -= 3
	オトコペナ += TALENT:MASTER:体型
	オトコペナ -= ABL:MASTER:断背之气 + ABL:MASTER:搞基中毒
	SIF オトコペナ < 0
		オトコペナ = 0
ENDIF

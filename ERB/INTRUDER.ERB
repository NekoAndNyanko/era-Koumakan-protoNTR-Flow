;	INTRUDER.ERB
;
;	侵入者処理
;	侵入者といっても特に何か危害を加えてくるわけではなくてふらふら移动して
;	時々些細な悪戯をする程度。

;-------------------------------------------------------------------------------
;侵入者(こいし)移动
;@return 1:移动あり, 0:移动なし
@INTRUDER_MOVEMENT
#DIM LOOP_POS
#DIM 待ちフラグ
#DIM 移动先
#DIM 表示フラグ

待ちフラグ = 0
SIF RAND:(TIME_PROGRESS(TFLAG:300) + 1) <= RAND:60
	待ちフラグ = 1
SIF 待ちフラグ || !FLAG:侵入者の現在位置
	RETURN 0
FOR LOOP_POS,0,MAXROOM()
	;施錠なんて関係ねぇ！
	;IF FLAG:(300 + LOOP_POS)
	;	LOCAL:1 = 100
	;ELSE
	;	LOCAL:1 = 100
	;ENDIF		
	;RESULT:LOCAL = LOCAL:1 * (CAN_MOVE(FLAG:侵入者の現在位置, LOCAL) > 0)
	RESULT:LOOP_POS = 100 * (CAN_MOVE(FLAG:侵入者の現在位置, LOOP_POS) > 0)
	SIF RESULT:LOOP_POS
		RESULT:LOOP_POS = RAND:(RESULT:LOOP_POS) + 1
NEXT
移动先 = 0
FOR LOOP_POS,1,MAXROOM()
	SIF RESULT:移动先 < RESULT:LOOP_POS
		移动先 = LOOP_POS
NEXT
表示フラグ = 0
IF IS_DISP_INTRUDER()
	PRINTFORMW こいしは【%GETPLACENAME(FLAG:侵入者の現在位置)%】から【%GETPLACENAME(移动先)%】に移动した
ELSE
	表示フラグ = 1
ENDIF
SIF 移动先
	FLAG:侵入者の現在位置 = 移动先
IF 表示フラグ && CFLAG:MASTER:現在位置 == FLAG:侵入者の現在位置
	PRINTFORMW こいしが【%GETPLACENAME(移动先)%】に入ってきた
ENDIF
RETURN 1

;-------------------------------------------------------------------------------
;侵入者(こいし)関連の文を表示するかの判定
;@return 1:表示する 0:表示しない
@IS_DISP_INTRUDER
#FUNCTION
IF IS_NTR_SHOW_ALL()	; 筒抜けモード
	RETURNF 1
ENDIF
IF CAN_MOVE(CFLAG:MASTER:現在位置, FLAG:侵入者の現在位置) == 2 || CFLAG:MASTER:現在位置 == FLAG:侵入者の現在位置
	RETURNF 1
ENDIF
RETURNF 0

;-------------------------------------------------------------------------------
;侵入者(こいし)アクション
;何か軽い悪戯
;@return 常に0
@INTRUDER_DO
#DIM LOOP_CHR
#DIM 住人人数	; 住人の人数

;来ていないときはなにもしない
IF 0 == FLAG:侵入者の現在位置
	RETURN 0
ENDIF
住人人数 = GET_N_IN_ROOM(FLAG:侵入者の現在位置, 0, 0, 0)
IF 0 == RAND:10
	PRINTL
	; 一定の確率でアクションを起こす
	; 状況で分岐。分岐した先の処理内で、さらに詳細な状況や場所で分岐
	IF CFLAG:MASTER:現在位置 == FLAG:侵入者の現在位置 && FLAG:訪問者の現在位置 == FLAG:侵入者の現在位置
		; MASTERと訪問者と同室
		IF 1 <= 住人人数
			; MASTER, 訪問者以外に住人がいる
			; 3P目撃
			; 戦闘目撃
			; etc...
			CALL INTRUDER_WITH_MASTER_VISITER_OTHER
		ELSE
			; MASTER, 訪問者のみ
			; 訪問者のMASTERへのセクハラ目撃
			; 戦闘目撃
			; etc...
			CALL INTRUDER_WITH_MASTER_VISITER
		ENDIF
	ELSEIF CFLAG:MASTER:現在位置 == FLAG:侵入者の現在位置
		; MASTERと同室
		IF 1 <= 住人人数
			; MASTER以外に住人がいる
			; うふふ目撃
			; 扫除目撃
			; 战斗训练目撃
			; etc...
			CALL INTRUDER_WITH_MASTER_OTHER
		ELSE
			; MASTERのみ
			; 扫除目撃
			; 战斗训练目撃
			; etc...
			CALL INTRUDER_WITH_MASTER
		ENDIF
	ELSEIF FLAG:訪問者の現在位置 == FLAG:侵入者の現在位置
		; 訪問者と同室
		IF 1 <= 住人人数
			; 訪問者以外に住人がいる
			; 住人との絡み目撃
			; etc...
			CALL INTRUDER_WITH_VISITER_OTHER
		ELSE
			; 訪問者のみ
			; etc...
			CALL INTRUDER_WITH_VISITER
		ENDIF
	ELSEIF 1 <= 住人人数
		; 住人と同室
		; 自慰目撃
		; etc...
		CALL INTRUDER_WITH_OTHER
	ELSE
		; 侵入者以外無人
		;   部屋をちらかす
		;   私室の場合家捜し
		;   etc...
		CALL INTRUDER_DO_SOLO
	ENDIF
ENDIF
RETURN 0


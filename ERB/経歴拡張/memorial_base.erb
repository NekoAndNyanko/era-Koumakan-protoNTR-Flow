;-------------------------------------------------------------------------------
;初体験の文字列を作成する
;　相手番号が-1の時、振动棒相手などの特殊ケース
@memorial_create(キャラ番号,相手番号,内容)
#FUNCTIONS
#DIM キャラ番号
#DIM 相手番号
#DIMS 内容
#DIMS 日時
#DIMS 場所
#DIMS 相手
#DIM 能动
;能动=1 主动 能动=0 被动
相手 = ""
能动 = 1
SIF !INRANGE(キャラ番号,0,CHARANUM)
	RETURNF 

;悩むところだけど、具体的な日付が明らかじゃない方が個人的に好み
;日時 = %日期_月数+"月"+日期_天数+"日"%
日時 = 第{日期_年数}年 %日期_月份名称(日期_月数)%{日期_天数}日 %天候(天候値)%%" "%

場所 = %"在"+GetPlaceName(CFLAG:キャラ番号:当前位置)+"，"%

;行為者が行為者の初めてを奪うことの回避。
IF キャラ番号 == 相手番号
	RETURNF 
ENDIF

SELECTCASE 相手番号
	CASE IS == -1
		;自分で振动棒で破った場合
		相手 = %"自らの手で"%
	CASE IS < CHARANUM
		相手 = %CALLNAME:相手番号%
	CASE IS == 人物_訪問者
		相手 = %NTR_NAME(0)%
	CASE IS == 人物_客, 人物_村人, 人物_催眠者
		相手 = %"不知名的男人"%
	CASEELSE
		相手 = %NTR_NAME(0)%
ENDSELECT

IF 内容 == ""
	SELECTCASE TCVAR:キャラ番号:行為者
		CASE IS == 0
			; 行為者があなた
			IF TALENT:キャラ番号:恋慕
				内容 = %"献给了"%
				; ELSEIF GETBIT(CFLAG:キャラ番号:既成事実,0)
			ELSEIF TALENT:キャラ番号:恋人
				内容 = %"交给了"%
			ELSE
				内容 = %"夺走了"%
			ENDIF
		CASE IS == 人物_訪問者
			IF TALENT:キャラ番号:NTR || (キャラ番号 == 人物_玩家 && (FLAG:1840 >= 11 && FLAG:1840 <= 15))
				内容 = %"满怀爱意地献给了"%
			ELSEIF NTR_CHK_FAVORABLY(キャラ番号, FAV_寝取られ寸前) || (キャラ番号 == 人物_玩家 && FLAG:1840 == 10)
				内容 = %"满怀爱意地悄悄献给了"%
			ELSEIF NTR_CHK_FAVORABLY(キャラ番号, FAV_寝取られそう)
				内容 = %"献给了"%
			ELSEIF NTR_CHK_FAVORABLY(キャラ番号, FAV_主人より高い)
				内容 = %"交给了"%
			ELSEIF NTR_CHK_FAVORABLY(キャラ番号, FAV_うふふする程度) 
				内容 = %"半推半就地交给了"%
			ELSEIF TALENT:キャラ番号:浮気公認
				内容 = %"夺走了"%
			ELSE
				内容 = %"夺走了"%
				能动 = 0
			ENDIF
		CASE IS == 人物_客
			内容 = %"买走了"%
		CASEELSE
			; 行為者が住人
			; 住人からの行動なので「奪われた」は無い。
			IF キャラ番号 ==  TCVAR:キャラ番号:行為者
				;奪った側
				IF 相手番号 == 0
					;相手があなた
					IF TALENT:相手番号:恋慕
						内容 = %"献给了"%
					ELSE
						内容 = %"交给了"%
					ENDIF
				ELSEIF 相手番号 == 人物_訪問者
					IF TALENT:相手番号:NTR
						内容 = %"献给了"%
					ELSEIF NTR_CHK_FAVORABLY(相手番号, FAV_寝取られ寸前) 
						内容 = %"献给了"%
					ELSE
						内容 = %"交给了"%
					ENDIF
				ELSE
					; 住人同士
					内容 = %"交给了"%
				ENDIF
			ELSE
				;奪われた側（たぶんここは死に分岐）
				IF 相手番号 == 0
					;相手があなた
					IF TALENT:キャラ番号:恋慕
						内容 = %"献给了"%
						; ELSEIF GETBIT(CFLAG:キャラ番号:既成事実,0)
					ELSEIF TALENT:キャラ番号:恋人
						内容 = %"交给了"%
					ELSE
						内容 = %"交给了"%
					ENDIF
				ELSEIF 相手番号 == 人物_訪問者
					IF TALENT:キャラ番号:NTR
						内容 = %"献给了"%
					ELSEIF NTR_CHK_FAVORABLY(キャラ番号, FAV_寝取られ寸前)
						内容 = %"献给了"%
					ELSEIF TALENT:キャラ番号:浮気公認
						内容 = %"奪ってもらった"%
					ELSE
						内容 = %"交给了"%
					ENDIF
				ELSE
					; 住人同士
					内容 = %"交给了"%
				ENDIF
			ENDIF
	ENDSELECT
ENDIF
IF 能动
	RETURNF 日時+場所+内容+相手
ELSE
	RETURNF 日時+場所+"被"+相手+内容
ENDIF
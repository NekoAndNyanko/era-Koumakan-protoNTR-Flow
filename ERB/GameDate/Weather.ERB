		;AM5~7
	CASE 300 TO 479
		LOCAL = FLAG:最低気温 + ((FLAG:最高気温 - FLAG:最低気温) / 5)
		;AM8~9
	CASE 480 TO 599
		LOCAL = FLAG:最低気温 + ((FLAG:最高気温 - FLAG:最低気温) / 5 * 2)
		;AM10~11
	CASE 600 TO 719

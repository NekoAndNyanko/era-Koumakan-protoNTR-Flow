		;PM12~2
	CASE 720 TO 899
		LOCAL = FLAG:最低気温 + ((FLAG:最高気温 - FLAG:最低気温) / 5 * 4)
		;PM3~5
	CASE 900 TO 1079
		LOCAL = FLAG:最高気温
		;PM6~7
	CASE 1080 TO 1199
		LOCAL = FLAG:最低気温 + ((FLAG:最高気温 - FLAG:最低気温) / 5 * 4)
		;PM8~9
	CASE 1200 TO 1259
		LOCAL = FLAG:最低気温 + ((FLAG:最高気温 - FLAG:最低気温) / 5 * 2)
		;PM9~10
	CASE 1260 TO 1379
		LOCAL = FLAG:最低気温 + ((FLAG:最高気温 - FLAG:最低気温) / 5)
ENDSELECT
;日が出ていないと温度低下
SELECTCASE TIME
		;AM5~PM7
	CASE 300 TO 1199
		IF 天候(天候値) != "万里无云" && 天候(天候値) != "晴天"
			LOCAL -= ((FLAG:最高気温 - FLAG:最低気温) / 5)
		ENDIF
ENDSELECT
FLAG:現在気温 = LOCAL

;EVENTCOMEND.ERB 6,BEFOR 36----------------------------------------------------------------
@天候状態
#DIM DYNAMIC 天候TIME
#DIM DYNAMIC 天候変更

;嵐発生
IF FLAG:異常気象発生ディレイ < 0
	IF (FLAG:異常気象発生ディレイ + TIME_PROGRESS(TFLAG:300)) >= 0
		;温度によって変化
		IF FLAG:現在気温 <= 3
			天候値 = 9
		ELSE
			天候値 = 8
		ENDIF
		;発生時間は4～12時間
		FLAG:異常気象発生ディレイ = RAND(240, 720)
		;PRINTFORML 嵐発生
	ELSE
		FLAG:異常気象発生ディレイ += TIME_PROGRESS(TFLAG:300)
		;PRINTFORML 嵐まであと{FLAG:異常気象発生ディレイ}
	ENDIF
	;嵐終了
ELSEIF FLAG:異常気象発生ディレイ > 0
	IF (FLAG:異常気象発生ディレイ - TIME_PROGRESS(TFLAG:300)) <= 0
		天候値 = 3
		FLAG:異常気象発生ディレイ = 0
		;PRINTFORML 嵐終了
	ELSE
		FLAG:異常気象発生ディレイ -= TIME_PROGRESS(TFLAG:300)
		;PRINTFORML 嵐やむまで{FLAG:異常気象発生ディレイ}
	ENDIF
ENDIF

;10~30分に一度
IF (天候TIME > TIME || TIME - 天候TIME >= 天候変更)
	;異常気象なら天候変化なし
	IF (天候(天候値) == "暴雨" || 天候(天候値) == "暴雪" || 天候(天候値) == "云雾" || 天候(天候値) == "白夜" || 天候(天候値) == "桃雾")
		;温度によって変化
		IF FLAG:現在気温 <= 3 && (天候(天候値) == "暴雨" || 天候(天候値) == "暴雪")
			天候値 = 9
		ELSE
			天候値 = 8
		ENDIF
		GOTO SKIP_天候
	ENDIF
	;雨天なら晴れに返回確率発生
	IF 天候値 >= 3
		;雨が上がる確率は100 - 降水確率　最大70% 最低10%
		IF RAND:100 < LIMIT(100 - FLAG:降水確率, 10, 70)
			天候値 = 1
		ENDIF
	ENDIF
	;曇りの状態なら降雨確率発生
	IF 天候(天候値) == "多云" && FLAG:降水確率 != 0
		;降雨確率
		IF RAND:100 < FLAG:降水確率
			;温度によって雪になる
			IF FLAG:現在気温 <= 3
				天候値 = 4
			ELSE
				;雷雨
				IF RAND:100 < 年間基礎雷発生確率(日期_月数, 日期_天数)
					天候値 = 5
				ELSE
					天候値 = 3
				ENDIF
			ENDIF

		ENDIF
	ENDIF

	;万里无云～曇りの状態変化
	IF 天候値 < 3
		;50%の確率で天候維持
		IF RAND:100 < 50
			IF 天候(天候値) == "万里无云"
				IF RAND:100 <= 70
					天候値 = 1
				ELSE
					天候値 = 2
				ENDIF
			ELSEIF 天候(天候値) == "晴天"
				IF RAND:100 <= 50
					天候値 = 0
				ELSE
					天候値 = 2
				ENDIF
			ELSE
				IF RAND:100 <= 70
					天候値 = 1
				ELSE
					天候値 = 0
				ENDIF
			ENDIF
		ENDIF
	ENDIF

	;雨、雪の大雨、大雪化
	IF (天候(天候値) == "小雨" || 天候(天候値) == "小雪")
		;確率は降水量/10 最低1%
		IF RAND:100 < MAX(1, FLAG:降水確率/10)
			IF 天候(天候値) == "小雨"
				天候値 = 6
			ELSE
				天候値 = 7
			ENDIF
		ENDIF
	ENDIF
	$SKIP_天候
	;次の変化時間と今の時間を保存
	天候変更 = RAND(10, 30)
	天候TIME = (TIME - (TIME % 30))
ENDIF



	;温度によって変化
	IF FLAG:現在気温 <= 3
		天候値 = 4
	ELSE
		天候値 = 3
	ENDIF
ENDIF

FLAG:最高気温 = 年間基礎最高気温(日期_月数, 日期_天数) + RAND(-3, 3)
;気温差は最低でも3度
FLAG:最低気温 = MIN(FLAG:最高気温-3, 年間基礎最低気温(日期_月数, 日期_天数) + RAND(-3, 3))
FLAG:降水確率 = RAND:(年間基礎降水確率(日期_月数, 日期_天数)+1)

CALL 異常気象


;----------------------------------------------------------------
@異常気象

;最高気温変化
IF FLAG:最高気温 >= (年間基礎最高気温(日期_月数, 日期_天数) + 2) && RAND:100 == 0
	IF RAND:2
		FLAG:最高気温 += RAND(3, 5)
	ELSE
		LOCAL = RAND(3, 5)
		FLAG:最高気温 -= LOCAL
		FLAG:最低気温 = MIN(FLAG:最高気温-3, FLAG:最低気温)
	ENDIF
ENDIF

;最低気温変化
IF FLAG:最低気温 <= (年間基礎最低気温(日期_月数, 日期_天数) - 2) && RAND:100 == 0
	FLAG:最高気温 -= RAND(3, 5)
ENDIF

;降水確率上昇
IF RAND:100 == 0
	FLAG:降水確率 += 30
ENDIF


SELECTCASE RAND:100

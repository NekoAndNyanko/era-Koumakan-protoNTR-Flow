;-------------------------------------------------
;放尿
;ハードな調教コマンド、レベル2
;-------------------------------------------------
@COM144
;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、气力
DOWNBASE:体力 += 10
DOWNBASE:气力 += 200

SOURCE:恐怖 = 200
SOURCE:露出 = 800
SOURCE:屈从 = 500
SOURCE:逸脱 = 700
SOURCE:反感 = 700

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑郁ソース追加
SIF TALENT:自己爱 < 0 || TALENT:抵抗
	SOURCE:抑郁 += 700

;場所によって逸脱のソースが上下
;野外
IF TEQUIP:野外PLAY
	TIMES SOURCE:逸脱 , 2.50
	;鏡の前（羞耻PLAY）
ELSEIF TEQUIP:羞耻PLAY
	TIMES SOURCE:逸脱 , 1.50
	;風呂場
ELSEIF TEQUIP:浴场PLAY
	TIMES SOURCE:逸脱 , 0.50
ENDIF

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;放尿经验
EXP:放尿经验 += 2
;同性愛　レズなら戻り値1ゲイなら戻り値2
IF HETEROSEX(TARGET,PLAYER)
	EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 2
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 2
ENDIF

;野外放尿で异常经验
IF TEQUIP:野外PLAY && !GETBIT(CFLAG:3,6)
	EXP:异常经验 += 1
	SETBIT CFLAG:异常经验,6
ENDIF

TEQUIP:利尿剂 = 0

RETURN 1

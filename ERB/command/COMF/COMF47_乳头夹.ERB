;-------------------------------------------------
;乳头夹
;道具使用コマンド、レベル2
;-------------------------------------------------
@COM47

TRYCALL COM417_is_Protected(PLAYER,TARGET,淫纹_胸元)
SIF RESULT
	RETURN 0

;着脱の処理
TEQUIP:乳头夹 = !TEQUIP:乳头夹

;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------
;行為者
TCVAR:116 = PLAYER
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、气力
DOWNBASE:体力 += 10
DOWNBASE:气力 += 80

SOURCE:快Ｂ = 200
SOURCE:露出 = 20
SOURCE:逸脱 = 30
SOURCE:反感 = 30


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;抑圧、抵抗持ちには、抑郁ソース追加
SIF TALENT:自己爱 < 0 || TALENT:抵抗
	SOURCE:抑郁 += 30
;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;同性愛　レズなら戻り値1ゲイなら戻り値2
IF HETEROSEX(TARGET,PLAYER)
	EXP:(50 + HETEROSEX(TARGET,PLAYER)) += 1
	EXP:PLAYER:(50 + HETEROSEX(TARGET,PLAYER)) += 1
ENDIF

EXP:PLAYER:道具使用经验 ++
CALL 改变乳头色素(TARGET,1)
CALL 改变乳头大小(TARGET,1)
CALL 确认乳头颜色(TARGET)
CALL 确认乳头大小(TARGET)
RETURN 1
;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM47(ARG)
;乳头夹装備中
PRINTL ＜乳头夹装备中＞
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
DOWNBASE:ARG:体力 += 5
DOWNBASE:ARG:气力 += 20

SOURCE:ARG:快Ｂ += 100
SOURCE:ARG:露出 += 10
SOURCE:ARG:逸脱 += 15
SOURCE:ARG:反感 += 15

RETURN 1

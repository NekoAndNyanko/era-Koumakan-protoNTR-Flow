;遠距離移动によるルート設定
@FARMOVE(住人, 現在地, 最終目的地)
#FUNCTION
#DIM 住人
#DIM 現在地
#DIM 最終目的地
#DIM Route_pos, 移动ルートMAX
#DIM Route_mus
#DIM Route_Sp
#DIM 暫定目的地
#DIM 経由地
#DIM 経由地補正

;LOCAL一覧
;1	暫定目的地
;2	ルート設定における現在地

IF (0 >= 現在地)
	現在地 = CFLAG:住人:開始位置
ENDIF

;ルートリセット
CALLF RESET_ROUTE(住人, 0)

VARSET Route_pos
Route_mus = 0
Route_Sp = 0
暫定目的地 = 最終目的地
経由地 = 現在地

;経由地から暫定目的地に直接移动できる場合、暫定目的地を保存してルート設定終了
IF CAN_MOVE(経由地, 暫定目的地)
	GOTO SUCCESS
ENDIF

;出発地点からのルートが固定されている場合その分を先に計算する
;袋小路なら行ける場所は固定なので、そこを経由地に保存する
経由地補正 = 次の経由地(経由地)
IF 経由地補正 != -1
	Route_Sp = 経由地
	経由地 = 経由地補正
ENDIF

;目的地から出発地点に向けて近づける
WHILE 1
	;経由地から暫定目的地に直接移动できる場合、暫定目的地を保存してルート設定終了
	IF CAN_MOVE(経由地, 暫定目的地)
		GOTO SUCCESS
	ENDIF

	;直接移动できない場合、1つ近い位置を暫定目的地に設定し直してループ
	IF Route_mus >= 移动ルートMAX
		GOTO ERROR
	ENDIF
	Route_pos:Route_mus = 暫定目的地
	Route_mus ++
	IF Route_mus >= 移动ルートMAX
		GOTO ERROR
	ENDIF
	暫定目的地 = 次の目的地(経由地, 暫定目的地)
	;前の目的地と今の目的地は必ず一致しない
	IF 暫定目的地 == Route_pos:Route_mus
		GOTO ERROR
	ENDIF
	;DEBUGPRINTFORML {暫定目的地} ルート逆算(現在地({経由地})〜最終地点({最終目的地})までの道のり)
WEND

$SUCCESS
IF Route_mus >= 移动ルートMAX
	GOTO ERROR
ENDIF
Route_pos:Route_mus = 暫定目的地

;経由地が現在地からずれている場合そこを最初の移动地点にする
IF Route_Sp
	Route_mus ++
	IF Route_mus >= 移动ルートMAX
		GOTO ERROR
	ENDIF
	Route_pos:Route_mus = 経由地補正
ENDIF
;設定したルートを反対から取って保存
FOR LOCAL, Route_mus, -1, -1
	移动ルート:住人:(Route_mus-LOCAL) = Route_pos:LOCAL
NEXT


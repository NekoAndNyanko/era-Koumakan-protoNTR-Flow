	PRINTW 因为不能通过蕾米莉亚的房间，所以不能移动
	GOTO LOOP_PAGE
ELSEIF TargetRoom == 0
	;どうしようもなければワープで返回
	CFLAG:MASTER:現在位置 = CFLAG:MASTER:開始位置
ELSEIF !INRANGE(TargetRoom, 0, 場所番号最大値)
	CLEARLINE 1
	REUSELASTLINE 
	GOTO INPUT_LOOP
	;移动先が隣の場所
ELSEIF CAN_MOVE(CFLAG:MASTER:現在位置, TargetRoom)
	IF FLAG:1840 < 2
		FLAG:1840 = 0
	ENDIF

	;地下室
	IF TargetRoom == 位置_地下室 && ABL:MASTER:战斗技能 <= 0
		PRINTW 从门里感到不祥之意……
		PRINTW 为了能平安返回，一定程度的实力是必要的吧。
		RESTART
	ELSEIF isLocked(TargetRoom)
		;施錠されている
		IF tryUnLock(MASTER, TargetRoom)
			IF HAS_DUPLICATE_KEY(TargetRoom)
				PRINTFORML 用钥匙进去了
			ELSE
				PRINTFORML 打开锁进去了
			ENDIF
		ELSE
			PRINTW 门从里面锁着……
			RESTART
		ENDIF
	ENDIF
	CFLAG:MASTER:現在位置 = TargetRoom
	PRINTFORML 
	FOR LOOP_CHR, 1, CHARANUM
		CALL CHAR_ON_PLACE(LOOP_CHR)
	NEXT
	CALL NTR_CHK_GOWITH(10)
ELSE
	IF FLAG:1840 < 2
		FLAG:1840 = 0
	ENDIF
	;目的地が離れているので、最終目的地として設定
	TFLAG:遠距離移动 = TargetRoom
	CALLF FARMOVE(MASTER, CFLAG:MASTER:現在位置, TargetRoom)
	;現在位置を更新し、次も移动の扱いにする
	CFLAG:MASTER:現在位置 = 移动ルート:MASTER:0
	CALL SORT_ROUTE(MASTER)
	NEXTCOM = 400
ENDIF

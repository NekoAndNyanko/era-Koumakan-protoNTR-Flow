;-------------------------------------------------
;移动
;-------------------------------------------------
@COM400
#DIMS ROOMNAME
#DIM PAGE
#DIM 住人
#DIM LOOP_CHR
#DIM LOOP_POS
#DIM WK
#DIMS WKNAME
#DIM TargetRoom

CALL TURN_RESET
;遠距離移动中の処理
IF TFLAG:遠距離移动

	TargetRoom = TFLAG:遠距離移动

	IF TargetRoom == CFLAG:MASTER:現在位置
		NEXTCOM = -1
		TFLAG:遠距離移动 = 0
		CALLF RESET_ROUTE(MASTER, 1)
		RETURN 0
	ENDIF

	;キャラの位置更新(NEXTCOM設定中は@SHOW_STATUSが走らないのでこっちで処理)
	CALL CHARA_MOVEMENT
	TFLAG:時間経過 = DATETIME()
	;キャラをCFLAG:310の昇順に並び替え
	VARSET TARGET
	CALL SORT_CFLAG(310)
	WK = 0
	CALL NTR_CHK_GOWITH(10)
	FOR LOOP_CHR,1,CHARANUM
		IF CFLAG:MASTER:現在位置 != CFLAG:(RESULT:LOOP_CHR):現在位置
			CONTINUE
		ENDIF
		WK ++
		TARGET:WK = RESULT:LOOP_CHR
	NEXT

	住人 = 0
	;誰かいないかチェック
	FOR LOOP_CHR,1,CHARANUM
		IF TARGET:LOOP_CHR <= 0
			CONTINUE
		ENDIF
		IF CFLAG:(TARGET:LOOP_CHR):同行
			CONTINUE
		ENDIF
		住人 = TARGET:LOOP_CHR
	NEXT
	IF 住人
		PRINTFORM 在%GETPLACENAME(CFLAG:MASTER:現在位置)%遇到了%CALLNAME:住人%
		;STRLENSU CALLNAME:住人
		;PRINTFORMW 対象:%CALLNAME:住人% パンツ:%CSTR:MASTER:収集品% %SUBSTRINGU(CSTR:MASTER:収集品, 0, RESULT)%
		IF STRLENS(CSTR:MASTER:収集品) && 収集品死守戦発生(住人) && !CFLAG:住人:睡眠
			CALL CHK_COLLECTION_ITEM(住人)
			IF RESULT == 1
				RETURN 0
			ENDIF
		ELSEIF FLAG:贞操帯鍵購入フラグ && RAND:2 && CFLAG:TARGET:NTR贞操帯反応
			CALL CHK_LOCK(住人)
		ELSE
			PRINTL ……怎么办呢？
			PRINTL [0]继续移动
			PRINTL [1]停下来
			INPUT

			IF RESULT == 0
				;無視する場合
				CALL IGNORE_WHEN_MOVE(住人)
			ELSE
				;実際は0以外全部立ち止まる扱い
				CALL STOP_WHEN_MOVE(住人)
				RETURN 0
			ENDIF
		ENDIF
	ENDIF
	;遠距離移动
	IF CAN_MOVE(CFLAG:MASTER:現在位置, TargetRoom)
		;地下室
		IF TargetRoom == 位置_地下室 && ABL:MASTER:战斗技能 <= 0
			PRINTW 从门里感到不祥之意……
			PRINTW 为了能平安返回，一定程度的实力是必要的吧。
			;遠距離移动フラグ消去
			NEXTCOM = -1
			CALLF RESET_ROUTE(MASTER, 1)
			RETURN 0
		ELSEIF TargetRoom != 位置_玩家房间 && isLocked(TargetRoom) && !canUnLock(MASTER, TargetRoom)
			;あなた以外の私室 and 合鍵無し
			PRINTW 门从里面锁着……
			IF GETBIT(FLAG:雑多設定,2)
				;なかにいるキャラから頼まれ事を請けているか
				FOR LOOP_CHR, 1, 8
					IF CFLAG:LOOP_CHR:現在位置 != TargetRoom
						CONTINUE
					ENDIF
					IF CFLAG:LOOP_CHR:従者イベント１ >= 10
						TRYCALL 従者E_受け取り不可, LOOP_CHR, "鍵閉め"
					ENDIF
				NEXT

			ENDIF
			;遠距離移动フラグ消去
			NEXTCOM = -1
			CALLF RESET_ROUTE(MASTER, 1)
			RETURN 0
			;それ以外の場所
		ELSE
			;あなたの現在位置に移动先を代入
			CFLAG:MASTER:現在位置 = TargetRoom
			;施錠されているが解錠できる
			IF isLocked(TargetRoom)
				IF tryUnLock(MASTER, TargetRoom)
					IF HAS_DUPLICATE_KEY(TargetRoom)
						PRINTFORML %"门从里面锁着……"+CALLNAME:MASTER+"打开锁进去了"%
					ELSE
						PRINTFORML %"门从里面锁着……"+CALLNAME:MASTER+"用钥匙进去了"%
					ENDIF
				ENDIF
			ENDIF
			PRINTFORML 
			FOR LOOP_CHR, 1, CHARANUM
				CALL CHAR_ON_PLACE(LOOP_CHR)
			NEXT
			;遠距離移动フラグ消去
			NEXTCOM = -1
		ENDIF
		FOR LOOP_CHR,1,CHARANUM
			IF CFLAG:LOOP_CHR:同行
				CFLAG:LOOP_CHR:現在位置 = CFLAG:MASTER:現在位置
			ENDIF
		NEXT
	ELSE
		;現在位置を更新し、次も移动の扱いにする
		CFLAG:MASTER:現在位置 = 移动ルート:MASTER:0
		CALL SORT_ROUTE(MASTER)
		NEXTCOM = 400
	ENDIF
	IF FLAG:訪問者同行フラグ
		FLAG:訪問者の現在位置 = CFLAG:MASTER:現在位置
	ENDIF
	CALL INHABITANT_FRIENDSHIP_END_MASTER_MOVE
	TIME += 3
	RETURN 0
ENDIF


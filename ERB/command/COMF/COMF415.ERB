;招待食物
@COM415


CALL DISH_COM_SUCCESS_RATE
TFLAG:193 = RESULT

DOWNBASE:MASTER:气力 += 100
DOWNBASE:MASTER:体力 += 50

;その場に居るTARGET全員で回す
LOCAL:1 = TARGET
FOR LOCAL,1,CHARANUM
	SIF TARGET:LOCAL <= 0
		CONTINUE
	SIF CFLAG:(TARGET:LOCAL):睡眠
		CONTINUE
	TARGET = TARGET:LOCAL
	CALL COM415_1
NEXT
TARGET = LOCAL:1

TIME += 60
TCVAR:PLAYER:305 = 0
TCVAR:PLAYER:306 = 0
RETURN 1

@COM415_1

DOWNBASE:气力 += 10

;固定で獲得するソース
SELECTCASE TCVAR:PLAYER:305
	CASE 0
		SOURCE:欢乐 = 1600
	CASE 1
		SOURCE:欢乐 = 400
	CASE 2
		SOURCE:欢乐 = 100
		SOURCE:肮脏 = 600
		SOURCE:反感 = 600
ENDSELECT

;ABL:顺从をみる
IF ABL:顺从 <= 1
	SOURCE:欢乐 += (ABL:顺从 * 60)
ELSEIF ABL:亲密 <= 3
	SOURCE:欢乐 += 300 + (ABL:顺从 * 60)
ELSEIF ABL:亲密 <= 5
	SOURCE:欢乐 += 600 + (ABL:顺从 * 60)
ELSEIF ABL:亲密 <= 8
	SOURCE:欢乐 += 900 + (ABL:顺从 * 75)
ELSEIF ABL:亲密 <= 11
	SOURCE:欢乐 += 1500 + (ABL:顺从 * 75)
ELSE
	SOURCE:欢乐 += 2500 + (ABL:顺从 * 30)
ENDIF

;好感度をみる
IF CFLAG:好感度 <= 500
	SOURCE:欢乐 += CFLAG:2
ELSEIF CFLAG:好感度 <= 5000
	SOURCE:欢乐 += 1000 + (CFLAG:好感度 - 500) / 3
ELSE
	SOURCE:欢乐 += 2500 + (CFLAG:好感度 - 5000) / 5
ENDIF
SIF SOURCE:欢乐 < 0
	SOURCE:欢乐 = 0


SOURCE:被动 = 500 + 100 * ABL:顺从
SOURCE:征服 = 500 + 100 * ABL:抖Ｓ之气

IF TFLAG:193 == -1
	TIMES SOURCE:欢乐 , 0.10
	TIMES SOURCE:征服 , 0.50
	TIMES SOURCE:被动 , 0.50
	TIMES SOURCE:反感 , 2.00
ELSEIF TFLAG:193 == 0
	TIMES SOURCE:欢乐 , 1.00
	TIMES SOURCE:征服 , 1.00
	TIMES SOURCE:被动 , 1.00
ELSE
	TIMES SOURCE:欢乐 , 2.00
	TIMES SOURCE:征服 , 2.00
	TIMES SOURCE:被动 , 2.00
	TIMES SOURCE:反感 , 0.50
ENDIF

IF GETDISHMENU(FLAG:料理 % 1000) == "軽食"
	BASE:体力 = MIN(BASE:体力 + MAXBASE:体力 / 20 , MAXBASE:体力)
	BASE:气力 = MIN(BASE:气力 + MAXBASE:气力 / 5 , MAXBASE:气力)
	TCVAR:304 |= 1
ELSEIF GETDISHMENU(FLAG:料理 % 1000) == "主食"
	BASE:体力 = MIN(BASE:体力 + MAXBASE:体力 / 10 , MAXBASE:体力)
	BASE:气力 = MIN(BASE:气力 + MAXBASE:气力 / 3 , MAXBASE:气力)
	TCVAR:304 |= 2
ELSEIF GETDISHMENU(FLAG:料理 % 1000) == "甜点"
	BASE:体力 = MIN(BASE:体力 + MAXBASE:体力 / 15 , MAXBASE:体力)
	BASE:气力 = MIN(BASE:气力 + MAXBASE:气力 / 2 , MAXBASE:气力)
	TCVAR:304 |= 4
ENDIF

;混ぜ物の効果
CALL DISHMIX_RESULT, TARGET

